---
import Container from "@/components/container.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Free AI Diagnostic",
    path: "/free-ai-diagnostic",
  },
  {
    title: "Home",
    path: "/",
  },
  {
    title: "Services",
    path: "/services",
  },
  {
    title: "Meet the Team",
    path: "/team",
  },
  {
    title: "Case Study",
    path: "/case-study",
  },
  {
    title: "Contact",
    path: "/contact",
  },
];
---

<div class="bg-navy fixed top-0 left-0 right-0 z-50 shadow-lg shadow-black/20">
  <Container>
    <header class="flex flex-col lg:flex-row justify-between items-center py-3">
      <Astronav>
        <div class="flex w-full lg:w-auto items-center justify-between gap-8">
          <a href="/">
            <img src="/public/bg-humtech.png" alt="HumTech Logo" class="h-20 lg:h-24 w-auto" />
          </a>
          <div class="block lg:hidden">
            <MenuIcon class="w-4 h-4 text-white" />
          </div>
          <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
            <ul class="flex flex-col lg:flex-row lg:gap-3">
              {
                menuitems.map((item, index) => (
                  <>
                    {item.children && (
                      <Dropdown
                        title={item.title}
                        children={item.children}
                        lastItem={index === menuitems.length - 1}
                      />
                    )}

                    {!item.children && (
                      <li>
                        <a
                          href={item.path}
                          class:list={[
                            "flex lg:px-3 py-2 items-center transition-colors",
                            item.title === "Free AI Diagnostic"
                              ? "text-yellow hover:text-yellow-light font-semibold"
                              : "text-white/70 hover:text-white",
                          ]}>
                          <span> {item.title}</span>
                          {item.badge && (
                            <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-navy bg-yellow rounded-full">
                              New
                            </span>
                          )}
                        </a>
                      </li>
                    )}
                  </>
                ))
              }
            </ul>
          </MenuItems>
        </div>
      </Astronav>
    </header>
  </Container>
</div>
