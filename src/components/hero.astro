    var copyBlocks = section.querySelectorAll('.kz-copy-reveal');
    var fired = false;

    var CIRCUMFERENCE = 2 * Math.PI * 96; // ~603.19

    function formatTime(seconds) {
      if (seconds < 60) return seconds + 's';
      if (seconds < 3600) {
        var m = Math.floor(seconds / 60);
        var s = seconds % 60;
        return m + ':' + (s < 10 ? '0' : '') + s;
      }
      var h = Math.floor(seconds / 3600);
      var m = Math.floor((seconds % 3600) / 60);
      return h + 'h ' + m + 'm';
    }

    var stages = [
      { duration: 1400, startSec: 0,    endSec: 30,    ringEnd: 8,   milestone: 'Competitors using AI have engaged lead', shake: 0, color: 'green' },
      { duration: 1300, startSec: 30,   endSec: 60,    ringEnd: 15,  milestone: 'Lead has looked up 3 other companies',   shake: 0, color: 'red' },
