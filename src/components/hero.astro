    gap: 0.5rem;
    min-height: 100px;
  }
  .cred-dash-chart-label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(255,255,255,0.35);
  }
  .cred-dash-bars {
    flex: 1;
    display: flex;
    align-items: flex-end;
    gap: 6px;
  }
  .cred-dash-bar {
    flex: 1;
    height: 0;
    border-radius: 4px 4px 0 0;
    background: linear-gradient(180deg, rgba(61,178,221,0.7) 0%, rgba(61,178,221,0.3) 100%);
    transition: height 1s cubic-bezier(0.4, 0, 0.2, 1);
    transition-delay: var(--bar-delay, 0s);
  }
  .cred-dash-bar--highlight {
    background: linear-gradient(180deg, rgba(216,183,67,0.9) 0%, rgba(216,183,67,0.5) 100%);
  }
  .cred-dash.animated .cred-dash-bar {
    height: var(--bar-h);
  }

  /* Sparkline row */
  .cred-dash-sparkrow {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.75rem;
  }
  .cred-dash-spark {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 0.5rem 0.6rem;
    border-radius: 8px;
    background: rgba(255,255,255,0.02);
    border: 1px solid rgba(255,255,255,0.04);
  }
  .cred-dash-spark-label {
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(255,255,255,0.35);
  }
  .cred-dash-sparkline {
    width: 100%;
    height: 24px;
  }

  /* Live indicator */
  .cred-dash-live {
    position: absolute;
    top: 1rem;
    right: 1rem;
    display: flex;
    align-items: center;
    gap: 0.35rem;
    z-index: 2;
  }
  .cred-dash-live-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #6BB790;
    animation: dash-pulse 2s ease-in-out infinite;
  }
  .cred-dash-live-text {
    font-size: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #6BB790;
    font-weight: 700;
  }
  @keyframes dash-pulse {
    0%, 100% { opacity: 1; box-shadow: 0 0 0 0 rgba(107,183,144,0.5); }
    50% { opacity: 0.6; box-shadow: 0 0 0 4px rgba(107,183,144,0); }
  }

  /* Mobile */
  @media (max-width: 1023px) {
    .cred-dash { min-height: 320px; }
  }
  @media (max-width: 768px) {
    .cred-cards-row { flex-direction: column; }
  }
  @media (max-width: 640px) {
    .cred-dash-stats { grid-template-columns: 1fr; }
    .cred-dash-sparkrow { grid-template-columns: 1fr; }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .cred-dash-bar { transition: none; }
    .cred-dash-live-dot { animation: none; }
  }

  /* ═══ Kill Zone Section ═══ */
  .kill-zone-section {
    padding: 5rem 0 6rem;
  }

  .kill-zone-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  /* Left column — race visual */
  .kill-zone-graphic-col {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .kz-race {
    width: 100%;
    background: #ffffff;
    border: 1px solid rgba(6, 21, 40, 0.08);
    border-radius: 16px;
    padding: 2.5rem 2rem;
    box-shadow: 0 4px 24px rgba(6, 21, 40, 0.06);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }

  .kz-race-title {
    color: #061528;
    font-size: clamp(1.5rem, 1.8vw, 2rem);
    font-weight: 900;
    letter-spacing: 0.08em;
    text-align: center;
    margin-bottom: 0.25rem;
  }

  .kz-race-tagline {
    color: rgba(6, 21, 40, 0.45);
    font-size: clamp(0.92rem, 1vw, 1.1rem);
    font-style: italic;
    font-weight: 500;
    letter-spacing: 0.02em;
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .kz-race-subtitle {
    color: rgba(6, 21, 40, 0.55);
    font-size: clamp(0.82rem, 0.88vw, 0.92rem);
    line-height: 1.4;
    text-align: center;
    margin-bottom: 2.5rem;
  }

  /* Incoming lead indicator */
  .kz-ring-incoming {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    opacity: 0;
    transform: scale(0.5);
    margin-bottom: 0.15rem;
    transition: opacity 300ms ease;
  }

  .kz-ring-incoming.kz-incoming-pop {
    animation: kzIncomingPop 600ms cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }

  @keyframes kzIncomingPop {
    0% { opacity: 0; transform: scale(0.3) translateY(8px); }
    50% { opacity: 1; transform: scale(1.1) translateY(-2px); }
    100% { opacity: 1; transform: scale(1) translateY(0); }
  }

  .kz-incoming-icon {
    width: 18px;
    height: 18px;
    color: #061528;
  }

  .kz-incoming-text {
    font-size: 0.78rem;
    font-weight: 700;
    color: #061528;
    letter-spacing: 0.01em;
  }

  /* Donut ring */
  .kz-ring-wrap {
    position: relative;
    width: min(100%, 260px);
    aspect-ratio: 1;
    margin: 0 auto 1rem;
  }

  .kz-ring-svg {
    width: 100%;
    height: 100%;
    display: block;
  }

  .kz-ring-track {
    stroke: rgba(6, 21, 40, 0.07);
  }

  .kz-ring-progress {
    stroke: #6BB790;
    stroke-dasharray: 603.19;
    stroke-dashoffset: 603.19;
    transition: none;
  }

  .kz-ring-center {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    pointer-events: none;
  }

  .kz-ring-time {
    font-size: clamp(2rem, 3vw, 2.8rem);
    font-weight: 900;
    color: #6BB790;
    font-variant-numeric: tabular-nums;
    line-height: 1;
    letter-spacing: -0.02em;
    transition: opacity 300ms ease;
  }

  .kz-ring-label {
    font-size: 0.75rem;
    color: rgba(6, 21, 40, 0.4);
    text-transform: uppercase;
    letter-spacing: 0.06em;
    font-weight: 600;
    margin-top: 0.2rem;
    transition: opacity 300ms ease;
  }

  /* Milestone status — always red */
  .kz-milestone {
    margin-top: 1.25rem;
    min-height: 2rem;
    text-align: center;
    font-size: clamp(1.15rem, 1.3vw, 1.4rem);
    font-weight: 800;
    color: #dc2626;
    opacity: 0;
    transform: scale(0.85);
    transition: none;
  }

  .kz-milestone.kz-milestone-green {
    color: #6BB790;
  }

  .kz-milestone.kz-milestone-pop {
    opacity: 1;
    transform: scale(1);
    animation: kzMilestonePop 400ms cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }

  @keyframes kzMilestonePop {
    0%   { opacity: 0; transform: scale(0.7); }
    60%  { opacity: 1; transform: scale(1.08); }
    100% { opacity: 1; transform: scale(1); }
  }

  /* Shake animation */
  @keyframes kzShake {
    0%, 100% { transform: translateX(0); }
    10% { transform: translateX(-6px) rotate(-0.5deg); }
    20% { transform: translateX(5px) rotate(0.5deg); }
    30% { transform: translateX(-7px) rotate(-0.3deg); }
    40% { transform: translateX(4px) rotate(0.3deg); }
    50% { transform: translateX(-5px); }
    60% { transform: translateX(6px); }
    70% { transform: translateX(-3px); }
    80% { transform: translateX(3px); }
    90% { transform: translateX(-2px); }
  }

  .kz-race.kz-shaking-light {
    animation: kzShakeLight 0.4s ease-in-out infinite;
  }

  @keyframes kzShakeLight {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-3px) rotate(-0.3deg); }
    50% { transform: translateX(3px) rotate(0.3deg); }
    75% { transform: translateX(-2px); }
  }

  .kz-race.kz-shaking {
    animation: kzShakeMed 0.3s ease-in-out infinite;
  }

  @keyframes kzShakeMed {
    0%, 100% { transform: translateX(0); }
    10% { transform: translateX(-6px) rotate(-0.6deg); }
    20% { transform: translateX(5px) rotate(0.5deg); }
    30% { transform: translateX(-7px) rotate(-0.4deg); }
    40% { transform: translateX(6px) rotate(0.4deg); }
    50% { transform: translateX(-5px); }
    60% { transform: translateX(7px); }
    70% { transform: translateX(-4px); }
    80% { transform: translateX(4px); }
    90% { transform: translateX(-3px); }
  }

  .kz-race.kz-shaking-heavy {
    animation: kzShakeHeavy 0.15s ease-in-out infinite;
  }

  @keyframes kzShakeHeavy {
    0%, 100% { transform: translate(0, 0) rotate(0); }
    10% { transform: translate(-10px, 2px) rotate(-1.2deg); }
    20% { transform: translate(8px, -2px) rotate(1deg); }
    30% { transform: translate(-12px, 1px) rotate(-0.8deg); }
    40% { transform: translate(10px, -1px) rotate(1.2deg); }
    50% { transform: translate(-8px, 2px) rotate(-1deg); }
    60% { transform: translate(12px, -2px) rotate(0.8deg); }
    70% { transform: translate(-10px, 1px) rotate(-1.2deg); }
    80% { transform: translate(8px, -1px) rotate(1deg); }
    90% { transform: translate(-6px, 2px) rotate(-0.6deg); }
  }

  /* Final death blow */
  .kz-race-gap {
    margin-top: 1.25rem;
    padding-top: 1rem;
    border-top: 2px solid #dc2626;
    text-align: center;
    opacity: 0;
    transform: scale(0.95);
    transition: opacity 500ms ease-out, transform 500ms ease-out;
  }

  .kz-race-gap.kz-gap-visible {
    opacity: 1;
    transform: scale(1);
  }

  .kz-race-gap-label {
    color: #dc2626;
    font-size: clamp(1.1rem, 1.3vw, 1.35rem);
    font-weight: 900;
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }

  /* Right column — copy */
  .kill-zone-copy-col {
    display: flex;
    flex-direction: column;
  }

  .kill-zone-copy-block {
    padding: 0.6rem 0;
  }

  .kill-zone-copy-block.kz-copy-final {
    margin-top: 1.2rem;
  }

  .kill-zone-copy-divider {
    height: 1px;
    background: rgba(6, 21, 40, 0.1);
    margin: 0.4rem 0;
  }

  /* Copy reveal animation */
  .kz-copy-reveal {
    opacity: 0;
    transform: translateX(24px);
    transition: opacity 500ms ease-out, transform 500ms ease-out;
    transition-delay: var(--kz-delay, 0ms);
  }

  .kz-copy-reveal.kz-visible {
    opacity: 1;
    transform: translateX(0);
  }

  /* Final line underline animation */
  .kz-copy-final .kill-zone-copy {
    position: relative;
    display: inline;
  }

  .kz-copy-final .kill-zone-copy::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: #9e7e20;
    transition: width 600ms ease-out;
    transition-delay: 860ms;
  }

  .kz-copy-final.kz-visible .kill-zone-copy::after {
    width: 100%;
  }

  .kill-zone-copy {
    color: rgba(6, 21, 40, 0.88);
    font-size: clamp(1.12rem, 1.3vw, 1.45rem);
    line-height: 1.5;
    font-weight: 600;
    letter-spacing: 0.002em;
  }

  .kz-text-accent {
    color: #9e7e20;
    font-weight: 700;
  }

  .kill-zone-copy-block:hover {
    background: rgba(6, 21, 40, 0.03);
    border-radius: 4px;
  }

  /* ══ SECTION A — Trap: dashboard + floating notifications ══ */

  #section-trap {
    font-family: var(--font-heading);
  }

  /* Animated background glow — slow pulse that builds tension */
  .trap-bg-glow {
    position: absolute; inset: 0;
    z-index: 0; pointer-events: none;
    background:
      radial-gradient(ellipse 70% 60% at 30% 40%, rgba(216,183,67,0.1) 0%, transparent 60%),
      radial-gradient(ellipse 60% 50% at 70% 60%, rgba(255,80,80,0.06) 0%, transparent 55%);
    animation: trap-glow-pulse 8s ease-in-out infinite alternate;
  }
  @keyframes trap-glow-pulse {
    0%   { opacity: 0.4; transform: scale(1); }
    50%  { opacity: 0.8; transform: scale(1.05); }
    100% { opacity: 1;   transform: scale(1.1); }
  }

  .trap-section-label {
    font-size: 0.7rem; letter-spacing: 0.2em; text-transform: uppercase;
    color: rgba(255,255,255,0.3); font-weight: 600; margin-bottom: 1rem;
    font-family: 'Courier New', 'Menlo', monospace;
  }

  /* ── Scene container (holds browser + floating cards) ── */
  .trap-scene {
    position: relative;
    width: 100%; max-width: 800px; margin: 0 auto;
    /* Extra padding so floating cards have room to breathe outside the browser */
    padding: 2rem 0;
  }

  /* ── Browser chrome ── */
  .trap-browser {
    background: rgba(255,255,255,0.04);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 32px 80px rgba(0,0,0,0.5), 0 0 0 1px rgba(255,255,255,0.05);
  }
  .trap-browser-bar {
    display: flex; align-items: center; gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: rgba(255,255,255,0.03);
    border-bottom: 1px solid rgba(255,255,255,0.07);
  }
  .trap-dot { width: 12px; height: 12px; border-radius: 50%; flex-shrink: 0; }
  .trap-dot--red   { background: #ff5f57; }
  .trap-dot--amber { background: #febc2e; }
  .trap-dot--green { background: #28c840; }
  .trap-browser-url {
    font-size: 0.7rem; color: rgba(255,255,255,0.3);
    background: rgba(255,255,255,0.05); border-radius: 6px;
    padding: 0.3rem 0.8rem; margin-left: 0.5rem;
    font-family: 'Courier New', monospace;
  }

  /* ── Fake dashboard inside browser ── */
  .trap-dash {
    display: flex; min-height: 340px;
  }
  .trap-dash-sidebar {
    width: 160px; flex-shrink: 0;
    background: rgba(255,255,255,0.03);
    border-right: 1px solid rgba(255,255,255,0.06);
    padding: 1.2rem 0.8rem;
    display: flex; flex-direction: column; gap: 0.15rem;
  }
  .trap-dash-logo {
    font-size: 0.85rem; font-weight: 800; color: rgba(255,255,255,0.6);
    margin-bottom: 1rem; letter-spacing: -0.02em;
  }
  .trap-dash-nav-item {
    font-size: 0.72rem; color: rgba(255,255,255,0.3);
    padding: 0.4rem 0.6rem; border-radius: 5px; cursor: default;
  }
  .trap-dash-nav-item--active {
    color: rgba(255,255,255,0.7);
    background: rgba(255,255,255,0.06);
  }
  .trap-dash-main {
    flex: 1; padding: 1.2rem 1.5rem;
  }
  .trap-dash-header {
    font-size: 0.78rem; font-weight: 700; color: rgba(255,255,255,0.55);
    margin-bottom: 0.6rem;
  }
  .trap-dash-count {
    font-weight: 400; color: rgba(255,255,255,0.25); margin-left: 0.5rem;
    font-size: 0.68rem;
  }
  .trap-dash-row {
    display: flex; gap: 1rem; align-items: center;
    padding: 0.5rem 0.6rem;
    border-bottom: 1px solid rgba(255,255,255,0.04);
    font-size: 0.72rem; color: rgba(255,255,255,0.4);
  }
  .trap-dash-row--dim { opacity: 0.5; }
  .trap-dash-cell { flex: 1; }
  .trap-dash-cell--status { flex: 0.6; color: rgba(107,183,144,0.7); font-size: 0.65rem; }
  .trap-dash-cell--warn { color: rgba(255,80,80,0.7); }
  .trap-dash-cell--date { flex: 0.5; text-align: right; font-size: 0.62rem; color: rgba(255,255,255,0.2); }

  /* Hide sidebar on small screens */
  @media (max-width: 640px) {
    .trap-dash-sidebar { display: none; }
    .trap-scene { padding: 1rem 0; }
  }

  /* ── Floating notification cards ── */
  .trap-notif {
    position: absolute;
    background: rgba(18,24,38,0.92);
    border: 1px solid rgba(255,255,255,0.12);
    border-radius: 10px;
    padding: 0.7rem 1rem;
    min-width: 240px; max-width: 320px;
    box-shadow: 0 12px 40px rgba(0,0,0,0.5), 0 0 0 1px rgba(255,255,255,0.05);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    opacity: 0;
    transform: translate(var(--notif-tx, 0), var(--notif-ty, 20px)) scale(0.95);
    transition: opacity 0.45s cubic-bezier(0.22,0.61,0.36,1),
                transform 0.45s cubic-bezier(0.22,0.61,0.36,1);
    pointer-events: none;
    z-index: 10;
  }
  .trap-notif.trap-notif--visible {
    opacity: 1;
    transform: translate(0, 0) scale(1);
    pointer-events: auto;
  }

  /* Position each notification around the dashboard edges */
  /* Right side — well clear of dashboard */
  .trap-notif--1 { top: 3%;     right: -18%;  --notif-tx: 50px;  --notif-ty: -10px; z-index: 11; }
  .trap-notif--3 { top: 25%;    right: -22%;  --notif-tx: 60px;  --notif-ty: 0px;   z-index: 13; }
  .trap-notif--5 { bottom: 30%; right: -20%;  --notif-tx: 50px;  --notif-ty: 10px;  z-index: 15; }
  .trap-notif--7 { bottom: 6%;  right: -18%;  --notif-tx: 50px;  --notif-ty: 10px;  z-index: 17; }
  .trap-notif--9 { bottom: -8%; right: 0%;    --notif-tx: 30px;  --notif-ty: 25px;  z-index: 19; }
  /* Left side — well clear of dashboard */
  .trap-notif--2 { top: 22%;    left: -24%;   --notif-tx: -50px; --notif-ty: 0px;   z-index: 12; }
  .trap-notif--4 { top: 38%;    left: -22%;   --notif-tx: -50px; --notif-ty: 10px;  z-index: 14; }
  .trap-notif--6 { bottom: 16%; left: -20%;   --notif-tx: -60px; --notif-ty: 0px;   z-index: 16; }
  .trap-notif--8 { bottom: -4%; left: 0%;     --notif-tx: -30px; --notif-ty: 25px;  z-index: 18; }

  /* On mobile, stack notifications more centred */
  @media (max-width: 768px) {
    .trap-notif { min-width: 200px; max-width: 260px; font-size: 0.85em; }
    .trap-notif--1 { top: 2%;   right: -2%; }
    .trap-notif--2 { top: 10%;  left: -2%; }
    .trap-notif--3 { top: 22%;  right: -3%; }
    .trap-notif--4 { top: 34%;  left: -2%; }
    .trap-notif--5 { bottom: 28%; right: -2%; }
    .trap-notif--6 { bottom: 18%; left: -3%; }
    .trap-notif--7 { bottom: 10%; right: -2%; }
    .trap-notif--8 { bottom: 2%;  left: 2%; }
    .trap-notif--9 { bottom: -3%; right: 4%; }
  }

  /* Card internals (shared) */
  .tc-row { display: flex; align-items: center; justify-content: space-between; gap: 0.75rem; }
  .tc-row--bot { margin-top: 0.25rem; }
  .tc-label { font-size: 0.78rem; font-weight: 700; color: rgba(255,255,255,0.9); }
  .tc-meta  { font-size: 0.68rem; color: rgba(255,255,255,0.4); }
  .tc-detail { font-size: 0.64rem; color: rgba(255,255,255,0.3); }
  .tc-tag {
    font-size: 0.58rem; font-weight: 700; letter-spacing: 0.08em;
    text-transform: uppercase; padding: 0.18rem 0.45rem; border-radius: 4px;
    flex-shrink: 0; white-space: nowrap;
  }
  .tc-green { background: rgba(107,183,144,0.18); color: #6BB790; border: 1px solid rgba(107,183,144,0.3); }
  .tc-blue  { background: rgba(61,178,221,0.15);  color: #3DB2DD; border: 1px solid rgba(61,178,221,0.3); }
  .tc-amber { background: rgba(216,183,67,0.15);  color: #D8B743; border: 1px solid rgba(216,183,67,0.3); }
  .tc-red   { background: rgba(255,80,80,0.15);   color: #ff6b6b; border: 1px solid rgba(255,80,80,0.3); }

  /* ── 3-column copy cards below scene ── */
  .trap-cols {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2.5rem;
    width: 100%;
    margin: 3rem 0 0;
  }
  @media (max-width: 768px) {
    .trap-cols { grid-template-columns: 1fr; gap: 1.5rem; margin-top: 3.5rem; }
  }
  .trap-col {}
  .trap-col-icon {
    width: 44px; height: 44px;
    display: flex; align-items: center; justify-content: center;
    background: rgba(255,255,255,0.04);
    border: 1px solid rgba(255,255,255,0.08);
    border-radius: 10px;
    margin-bottom: 1rem;
  }
  .trap-col p {
    font-size: clamp(0.88rem, 1.1vw, 0.98rem);
    color: rgba(255,255,255,0.55);
    line-height: 1.65;
    margin: 0;
  }
  .trap-col p strong {
    color: rgba(255,255,255,0.9);
    font-weight: 600;
    display: block;
    margin-bottom: 0.3rem;
    font-size: clamp(0.92rem, 1.2vw, 1.05rem);
  }
  /* ── Testimonial bridge section ── */
  .testi-section {
    background: #EAEDF2;
    padding: 4rem 0 5rem;
    overflow: hidden;
    position: relative;
