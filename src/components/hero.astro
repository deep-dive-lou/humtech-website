    var obs = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting && !animated) {
          animated = true;
          dash.classList.add('animated');
          animateCounters();
          obs.disconnect();
        }
      });
    }, { threshold: 0.3 });
    obs.observe(dash);
  })();
