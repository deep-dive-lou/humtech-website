    position: relative;
    flex: 1;
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid rgba(255,255,255,0.08);
    box-shadow: 0 4px 20px rgba(0,0,0,0.3);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }
  .cred-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0,0,0,0.45);
  }

  /* Tinted backgrounds per card */
  .cred-card--yellow { background: linear-gradient(165deg, rgba(216,183,67,0.15) 0%, rgba(216,183,67,0.04) 100%); }
  .cred-card--blue { background: linear-gradient(165deg, rgba(61,178,221,0.15) 0%, rgba(61,178,221,0.04) 100%); }
  .cred-card--green { background: linear-gradient(165deg, rgba(107,183,144,0.15) 0%, rgba(107,183,144,0.04) 100%); }

  /* Top accent bar */
  .cred-card-bar {
    display: block;
    width: 100%;
    height: 4px;
  }
  .cred-card--yellow .cred-card-bar { background: linear-gradient(90deg, #D8B743, #e5c85a); }
  .cred-card--blue .cred-card-bar { background: linear-gradient(90deg, #3DB2DD, #5fc4e8); }
  .cred-card--green .cred-card-bar { background: linear-gradient(90deg, #6BB790, #85c9a6); }

  /* Card content — vertical portrait layout */
  .cred-card-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1rem;
    padding: 1.75rem 1.25rem 2rem;
  }
  .cred-card-content p {
    color: rgba(255,255,255,0.88);
    font-size: clamp(0.95rem, 1.1vw, 1.1rem);
    line-height: 1.55;
    margin: 0;
  }

  /* Card icon */
  .cred-card-icon {
    width: 36px;
    height: 36px;
    flex-shrink: 0;
  }
  .cred-card--yellow .cred-card-icon { color: #D8B743; }
  .cred-card--blue .cred-card-icon { color: #3DB2DD; }
  .cred-card--green .cred-card-icon { color: #6BB790; }

  /* Right column */
  .cred-right-col {
    flex: 1;
    display: flex;
    align-items: stretch;
  }

  /* Dashboard panel */
  .cred-dash {
    position: relative;
    width: 100%;
    border-radius: 16px;
    background: linear-gradient(160deg, #0c1a2e 0%, #091422 100%);
    border: 1px solid rgba(255,255,255,0.06);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0,0,0,0.4);
  }

  /* Dot grid background */
  .cred-dash-grid {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle, rgba(255,255,255,0.04) 1px, transparent 1px);
    background-size: 20px 20px;
    pointer-events: none;
  }

  /* Stats row */
  .cred-dash-stats {
    position: relative;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.75rem;
    z-index: 1;
  }
  .cred-dash-stat {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
    padding: 0.75rem;
    border-radius: 10px;
    background: rgba(255,255,255,0.03);
    border: 1px solid rgba(255,255,255,0.05);
  }
  .cred-dash-stat-label {
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: rgba(255,255,255,0.4);
  }
  .cred-dash-stat-val {
    font-size: 1.5rem;
    font-weight: 800;
    color: white;
    line-height: 1;
    font-variant-numeric: tabular-nums;
  }
  .cred-dash-stat-delta {
    font-size: 0.7rem;
    font-weight: 700;
  }
  .cred-dash-stat-delta--good { color: #6BB790; }

  /* Bar chart */
  .cred-dash-chart {
    position: relative;
    z-index: 1;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    min-height: 100px;
  }
  .cred-dash-chart-label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(255,255,255,0.35);
  }
  .cred-dash-bars {
    flex: 1;
    display: flex;
    align-items: flex-end;
    gap: 6px;
  }
  .cred-dash-bar {
    flex: 1;
    height: 0;
    border-radius: 4px 4px 0 0;
    background: linear-gradient(180deg, rgba(61,178,221,0.7) 0%, rgba(61,178,221,0.3) 100%);
    transition: height 1s cubic-bezier(0.4, 0, 0.2, 1);
    transition-delay: var(--bar-delay, 0s);
  }
  .cred-dash-bar--highlight {
    background: linear-gradient(180deg, rgba(216,183,67,0.9) 0%, rgba(216,183,67,0.5) 100%);
  }
  .cred-dash.animated .cred-dash-bar {
    height: var(--bar-h);
  }

  /* Sparkline row */
  .cred-dash-sparkrow {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.75rem;
  }
  .cred-dash-spark {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 0.5rem 0.6rem;
    border-radius: 8px;
    background: rgba(255,255,255,0.02);
    border: 1px solid rgba(255,255,255,0.04);
  }
  .cred-dash-spark-label {
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(255,255,255,0.35);
  }
  .cred-dash-sparkline {
    width: 100%;
    height: 24px;
  }

  /* Live indicator */
  .cred-dash-live {
    position: absolute;
    top: 1rem;
    right: 1rem;
    display: flex;
    align-items: center;
    gap: 0.35rem;
    z-index: 2;
  }
  .cred-dash-live-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #6BB790;
    animation: dash-pulse 2s ease-in-out infinite;
  }
  .cred-dash-live-text {
    font-size: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #6BB790;
    font-weight: 700;
  }
  @keyframes dash-pulse {
    0%, 100% { opacity: 1; box-shadow: 0 0 0 0 rgba(107,183,144,0.5); }
    50% { opacity: 0.6; box-shadow: 0 0 0 4px rgba(107,183,144,0); }
  }

  /* Mobile */
  @media (max-width: 1023px) {
    .cred-dash { min-height: 320px; }
  }
  @media (max-width: 768px) {
    .cred-cards-row { flex-direction: column; }
  }
  @media (max-width: 640px) {
    .cred-dash-stats { grid-template-columns: 1fr; }
    .cred-dash-sparkrow { grid-template-columns: 1fr; }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .cred-dash-bar { transition: none; }
    .cred-dash-live-dot { animation: none; }
  }

  /* ═══ Kill Zone Section ═══ */
  .kill-zone-section {
    padding: 5rem 0 6rem;
  }

  .kill-zone-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  /* Left column — race visual */
  .kill-zone-graphic-col {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .kz-race {
    width: 100%;
    background: #ffffff;
    border: 1px solid rgba(6, 21, 40, 0.08);
    border-radius: 16px;
    padding: 2.5rem 2rem;
    box-shadow: 0 4px 24px rgba(6, 21, 40, 0.06);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }

  .kz-race-title {
    color: #061528;
    font-size: clamp(1.5rem, 1.8vw, 2rem);
    font-weight: 900;
    letter-spacing: 0.08em;
    text-align: center;
    margin-bottom: 0.25rem;
  }

  .kz-race-tagline {
    color: rgba(6, 21, 40, 0.45);
    font-size: clamp(0.92rem, 1vw, 1.1rem);
    font-style: italic;
    font-weight: 500;
    letter-spacing: 0.02em;
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .kz-race-subtitle {
    color: rgba(6, 21, 40, 0.55);
    font-size: clamp(0.82rem, 0.88vw, 0.92rem);
    line-height: 1.4;
    text-align: center;
    margin-bottom: 2.5rem;
  }

  /* Incoming lead indicator */
  .kz-ring-incoming {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    opacity: 0;
    transform: scale(0.5);
    margin-bottom: 0.15rem;
    transition: opacity 300ms ease;
  }

  .kz-ring-incoming.kz-incoming-pop {
    animation: kzIncomingPop 600ms cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }

  @keyframes kzIncomingPop {
    0% { opacity: 0; transform: scale(0.3) translateY(8px); }
    50% { opacity: 1; transform: scale(1.1) translateY(-2px); }
    100% { opacity: 1; transform: scale(1) translateY(0); }
  }

  .kz-incoming-icon {
    width: 18px;
    height: 18px;
    color: #061528;
  }

  .kz-incoming-text {
    font-size: 0.78rem;
    font-weight: 700;
    color: #061528;
    letter-spacing: 0.01em;
  }

  /* Donut ring */
  .kz-ring-wrap {
    position: relative;
    width: min(100%, 260px);
    aspect-ratio: 1;
    margin: 0 auto 1rem;
  }

  .kz-ring-svg {
    width: 100%;
    height: 100%;
    display: block;
  }

  .kz-ring-track {
    stroke: rgba(6, 21, 40, 0.07);
  }

  .kz-ring-progress {
    stroke: #6BB790;
    stroke-dasharray: 603.19;
    stroke-dashoffset: 603.19;
    transition: none;
  }

  .kz-ring-center {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    pointer-events: none;
  }

  .kz-ring-time {
    font-size: clamp(2rem, 3vw, 2.8rem);
    font-weight: 900;
    color: #6BB790;
    font-variant-numeric: tabular-nums;
    line-height: 1;
    letter-spacing: -0.02em;
    transition: opacity 300ms ease;
  }

  .kz-ring-label {
    font-size: 0.75rem;
    color: rgba(6, 21, 40, 0.4);
    text-transform: uppercase;
    letter-spacing: 0.06em;
    font-weight: 600;
    margin-top: 0.2rem;
    transition: opacity 300ms ease;
  }

  /* Milestone status — always red */
  .kz-milestone {
    margin-top: 1.25rem;
    min-height: 2rem;
    text-align: center;
    font-size: clamp(1.15rem, 1.3vw, 1.4rem);
    font-weight: 800;
    color: #dc2626;
    opacity: 0;
    transform: scale(0.85);
    transition: none;
  }

  .kz-milestone.kz-milestone-green {
    color: #6BB790;
  }

  .kz-milestone.kz-milestone-pop {
    opacity: 1;
    transform: scale(1);
    animation: kzMilestonePop 400ms cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }

  @keyframes kzMilestonePop {
    0%   { opacity: 0; transform: scale(0.7); }
    60%  { opacity: 1; transform: scale(1.08); }
    100% { opacity: 1; transform: scale(1); }
  }

  /* Shake animation */
  @keyframes kzShake {
    0%, 100% { transform: translateX(0); }
    10% { transform: translateX(-6px) rotate(-0.5deg); }
    20% { transform: translateX(5px) rotate(0.5deg); }
    30% { transform: translateX(-7px) rotate(-0.3deg); }
    40% { transform: translateX(4px) rotate(0.3deg); }
    50% { transform: translateX(-5px); }
    60% { transform: translateX(6px); }
    70% { transform: translateX(-3px); }
    80% { transform: translateX(3px); }
    90% { transform: translateX(-2px); }
  }

  .kz-race.kz-shaking-light {
    animation: kzShakeLight 0.4s ease-in-out infinite;
  }

  @keyframes kzShakeLight {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-3px) rotate(-0.3deg); }
    50% { transform: translateX(3px) rotate(0.3deg); }
    75% { transform: translateX(-2px); }
  }

  .kz-race.kz-shaking {
    animation: kzShakeMed 0.3s ease-in-out infinite;
  }

  @keyframes kzShakeMed {
    0%, 100% { transform: translateX(0); }
    10% { transform: translateX(-6px) rotate(-0.6deg); }
    20% { transform: translateX(5px) rotate(0.5deg); }
    30% { transform: translateX(-7px) rotate(-0.4deg); }
    40% { transform: translateX(6px) rotate(0.4deg); }
    50% { transform: translateX(-5px); }
    60% { transform: translateX(7px); }
    70% { transform: translateX(-4px); }
    80% { transform: translateX(4px); }
    90% { transform: translateX(-3px); }
  }

  .kz-race.kz-shaking-heavy {
    animation: kzShakeHeavy 0.15s ease-in-out infinite;
  }

  @keyframes kzShakeHeavy {
    0%, 100% { transform: translate(0, 0) rotate(0); }
    10% { transform: translate(-10px, 2px) rotate(-1.2deg); }
    20% { transform: translate(8px, -2px) rotate(1deg); }
    30% { transform: translate(-12px, 1px) rotate(-0.8deg); }
    40% { transform: translate(10px, -1px) rotate(1.2deg); }
    50% { transform: translate(-8px, 2px) rotate(-1deg); }
    60% { transform: translate(12px, -2px) rotate(0.8deg); }
    70% { transform: translate(-10px, 1px) rotate(-1.2deg); }
    80% { transform: translate(8px, -1px) rotate(1deg); }
    90% { transform: translate(-6px, 2px) rotate(-0.6deg); }
  }

  /* Final death blow */
  .kz-race-gap {
    margin-top: 1.25rem;
    padding-top: 1rem;
    border-top: 2px solid #dc2626;
    text-align: center;
    opacity: 0;
    transform: scale(0.95);
    transition: opacity 500ms ease-out, transform 500ms ease-out;
  }

  .kz-race-gap.kz-gap-visible {
    opacity: 1;
    transform: scale(1);
  }

  .kz-race-gap-label {
    color: #dc2626;
    font-size: clamp(1.1rem, 1.3vw, 1.35rem);
    font-weight: 900;
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }

  /* Right column — copy */
  .kill-zone-copy-col {
    display: flex;
    flex-direction: column;
  }

  .kill-zone-copy-block {
    padding: 0.6rem 0;
  }

  .kill-zone-copy-block.kz-copy-final {
    margin-top: 1.2rem;
  }

  .kill-zone-copy-divider {
    height: 1px;
    background: rgba(6, 21, 40, 0.1);
    margin: 0.4rem 0;
  }

  /* Copy reveal animation */
  .kz-copy-reveal {
    opacity: 0;
    transform: translateX(24px);
    transition: opacity 500ms ease-out, transform 500ms ease-out;
    transition-delay: var(--kz-delay, 0ms);
  }

  .kz-copy-reveal.kz-visible {
    opacity: 1;
    transform: translateX(0);
  }

  /* Final line underline animation */
  .kz-copy-final .kill-zone-copy {
    position: relative;
    display: inline;
  }

  .kz-copy-final .kill-zone-copy::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: #9e7e20;
    transition: width 600ms ease-out;
    transition-delay: 860ms;
  }

  .kz-copy-final.kz-visible .kill-zone-copy::after {
    width: 100%;
  }

  .kill-zone-copy {
    color: rgba(6, 21, 40, 0.88);
    font-size: clamp(1.12rem, 1.3vw, 1.45rem);
    line-height: 1.5;
    font-weight: 600;
    letter-spacing: 0.002em;
  }

  .kz-text-accent {
    color: #9e7e20;
    font-weight: 700;
  }

  .kill-zone-copy-block:hover {
    background: rgba(6, 21, 40, 0.03);
    border-radius: 4px;
  }

  /* ── Beat layout: Trap section ── */
  .trap-split-row { display: flex; flex-direction: column; align-items: center; gap: 3rem; }
  @media (min-width: 900px) { .trap-split-row { flex-direction: row; align-items: center; gap: 5rem; } }
  .trap-diagram-col { flex-shrink: 0; display: flex; justify-content: center; }
  .trap-copy-col { flex: 1; }

  /* Enlarged wrapper for cycle diagram */
  .cycle-wrap-lg { position: relative; width: 340px; height: 340px; flex-shrink: 0; }
  @media (min-width: 640px) { .cycle-wrap-lg { width: 420px; height: 420px; } }
  .cycle-wrap-lg .cycle-svg { position: absolute; inset: 0; width: 100%; height: 100%; }

  /* Cycle diagram */
  .cycle-wrap {
    position: relative; width: 320px; height: 320px; flex-shrink: 0;
  }
  .cycle-svg { position: absolute; inset: 0; width: 100%; height: 100%; }
  .cycle-node-dot { transition: stroke 0.3s ease, filter 0.3s ease; }
  .cycle-node-dot.active {
    stroke: rgba(216,183,67,0.9) !important;
    filter: drop-shadow(0 0 8px rgba(216,183,67,0.7));
  }
  .cycle-arc { stroke-dasharray: 200; stroke-dashoffset: 200; transition: stroke-dashoffset 0.6s ease, stroke 0.3s ease; }
  .cycle-arc.drawn { stroke-dashoffset: 0; }
  .cycle-arc.active { stroke: rgba(216,183,67,0.7) !important; }
  .cycle-arc-return.active { stroke: rgba(216,183,67,0.9) !important; }
  /* Labels — bumped to 0.8rem, pointer-events none */
  .cycle-label {
    position: absolute; font-size: 0.8rem; color: rgba(255,255,255,0.45);
    font-weight: 600; text-align: center; line-height: 1.3;
    transition: color 0.3s ease; pointer-events: none;
  }
  .cycle-label.active { color: rgba(255,255,255,0.95); }
  .cycle-center {
    position: absolute; top: 50%; left: 50%; transform: translate(-50%,-50%);
    font-size: 0.68rem; font-weight: 700; color: rgba(216,183,67,0.65);
    text-align: center; line-height: 1.3; letter-spacing: 0.04em; text-transform: uppercase;
    pointer-events: none;
  }

  /* Node hover tooltips */
  .cycle-tooltip {
    position: absolute;
    background: rgba(8,14,24,0.96);
    border: 1px solid rgba(216,183,67,0.4);
    border-radius: 8px;
    padding: 0.55rem 0.85rem;
    font-size: 0.72rem;
    line-height: 1.5;
    color: rgba(255,255,255,0.85);
    white-space: nowrap;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.18s ease, transform 0.18s ease;
    z-index: 10;
    box-shadow: 0 4px 20px rgba(0,0,0,0.55);
  }
  .cycle-tooltip strong {
    color: #D8B743; display: block; margin-bottom: 0.15rem;
    font-size: 0.7rem; letter-spacing: 0.04em; text-transform: uppercase;
  }
  #ct-0 { bottom: calc(100% + 0.5rem); left: 50%; transform: translateX(-50%) translateY(6px); }
  #ct-0.cycle-tooltip--visible { opacity: 1; transform: translateX(-50%) translateY(0); }
  #ct-1 { top: 50%; left: calc(100% + 0.5rem); transform: translateY(calc(-50% + 6px)); }
  #ct-1.cycle-tooltip--visible { opacity: 1; transform: translateY(-50%); }
  #ct-2 { top: calc(100% + 0.5rem); left: 50%; transform: translateX(-50%) translateY(-6px); }
  #ct-2.cycle-tooltip--visible { opacity: 1; transform: translateX(-50%) translateY(0); }
  #ct-3 { top: 50%; right: calc(100% + 0.5rem); transform: translateY(calc(-50% + 6px)); }
  #ct-3.cycle-tooltip--visible { opacity: 1; transform: translateY(-50%); }

  /* Circular latency diagram */
  .circ-latency-wrap { display: flex; flex-direction: column; align-items: center; gap: 0; }
  .circ-latency-wrap--large { padding: 1rem; }
  .circ-diagram-row { display: flex; align-items: center; gap: 3.5rem; flex-wrap: wrap; justify-content: center; }
  .circ-svg-container { width: 300px; height: 300px; flex-shrink: 0; }
  .circ-svg-container--lg { width: 340px; height: 340px; }
  @media (min-width: 640px) { .circ-svg-container--lg { width: 420px; height: 420px; } }
  .circ-svg { width: 100%; height: 100%; overflow: visible; }

  /* Story sequential reveal */
  .story-line { transition: opacity 0.5s ease; }
  .story-line--dim { opacity: 0.22; }
  .story-line--active { opacity: 1; }
  .story-line--past { opacity: 0.38; }

  .circ-legend { display: flex; flex-direction: column; min-width: 160px; }
  .circ-legend-item { display: flex; align-items: flex-start; gap: 0.75rem; }
  .circ-legend-dot { width: 12px; height: 12px; border-radius: 50%; flex-shrink: 0; margin-top: 3px; }
  .circ-legend-label { font-size: 0.75rem; color: rgba(255,255,255,0.4); text-transform: uppercase; letter-spacing: 0.06em; font-weight: 600; }
  .circ-legend-val { font-size: 2rem; font-weight: 800; line-height: 1.1; margin-top: 0.1rem; transition: color 0.6s ease; }

  /* Toggle (keep same styling) */
  .latency-toggle-row { display: flex; align-items: center; gap: 0.75rem; justify-content: center; }
  .latency-toggle-label { font-size: 0.65rem; color: rgba(255,255,255,0.45); font-weight: 600; letter-spacing: 0.02em; }
  .latency-toggle {
    position: relative; width: 44px; height: 24px;
    background: rgba(255,255,255,0.06); border: 1px solid rgba(255,255,255,0.12);
    border-radius: 12px; cursor: pointer; transition: background 0.25s, border-color 0.25s;
  }
  .latency-toggle[aria-pressed="true"] { background: rgba(107,183,144,0.22); border-color: rgba(107,183,144,0.5); }
  .latency-toggle-knob {
    position: absolute; top: 3px; left: 3px; width: 16px; height: 16px;
    background: rgba(255,255,255,0.4); border-radius: 50%; transition: transform 0.25s, background 0.25s;
  }
  .latency-toggle[aria-pressed="true"] .latency-toggle-knob { transform: translateX(20px); background: #6BB790; }

  .latency-graphic {
    display: block;
    height: auto;
  }

  .section-eight-story {
    text-align: left;
    max-width: 48rem;
    margin-top: 2.75rem;
    margin-bottom: 2rem;
