        for (var col = 0; col < COLS; col++) {
          var gx = col * SPACING - padX + SPACING / 2;
          var gy = row * SPACING - padY + SPACING / 2;
          var isAccent = (col * 7 + row * 13) % 37 === 0;
          points.push({ gx: gx, gy: gy, z: 0, isAccent: isAccent, row: row, col: col });
