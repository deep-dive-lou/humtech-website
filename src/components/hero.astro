---
import { Image } from "astro:assets";
import trustedLogoEcop from "@/assets/trusted-logo-ecop.webp";
import trustedLogoLmf from "@/assets/trusted-logo-lmf.webp";
import trustedLogoGhs from "@/assets/trusted-logo-ghs.webp";
import trustedLogoResg from "@/assets/trusted-logo-resg.png";
import trustedLogoAse from "@/assets/trusted-logo-ase.png";
import trustedLogoDiversity from "@/assets/trusted-logo-div.png";
import trustedLogoHnr from "@/assets/trusted-logo-hnr.png";
import trustedLogoOptama from "@/assets/trusted-logo-optama.png";
import trustedLogoSr from "@/assets/trusted-logo-sr.png";
import trustedLogoZenith from "@/assets/trusted-logo-zen.png";
const trustedLogos = [
  { src: trustedLogoEcop, alt: "ECOP" },
  { src: trustedLogoAse, alt: "ASE" },
  { src: trustedLogoLmf, alt: "LMF" },
  { src: trustedLogoHnr, alt: "HNR" },
  { src: trustedLogoGhs, alt: "GHS" },
  { src: trustedLogoOptama, alt: "Optama" },
  { src: trustedLogoResg, alt: "RESG" },
  { src: trustedLogoDiversity, alt: "Diversity" },
  { src: trustedLogoSr, alt: "SR" },
  { src: trustedLogoZenith, alt: "Zenith" },
];
---

<!-- Hero background wrapper — covers carousel + hero -->
<div class="hero-bg-wrapper" style="position:relative; overflow:hidden; background:#061528;">
  <!-- Canvas background (covers carousel + hero) -->
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true" style="z-index:0;">
    <div class="hero-aurora hero-aurora-1"></div>
    <div class="hero-aurora hero-aurora-2"></div>
    <canvas id="hero-canvas" class="absolute inset-0 w-full h-full"></canvas>
    <div class="absolute inset-0" style="background-image: linear-gradient(rgba(255,255,255,0.018) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.018) 1px, transparent 1px); background-size: 52px 52px; mask-image: radial-gradient(ellipse at 50% 40%, rgba(0,0,0,0.5) 0%, transparent 75%);"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-navy/40 via-transparent to-navy pointer-events-none"></div>
  </div>

<!-- Trusted By Strip — infinite CSS marquee on transparent bg -->
<section class="trusted-top-strip" style="position:relative; z-index:20; overflow:hidden; padding:1.4rem 0;">
  <!-- Edge fade masks -->
  <div style="position:absolute;top:0;left:0;bottom:0;width:120px;background:linear-gradient(to right,rgba(6,21,40,0.95),transparent);z-index:2;pointer-events:none;"></div>
  <div style="position:absolute;top:0;right:0;bottom:0;width:120px;background:linear-gradient(to left,rgba(6,21,40,0.95),transparent);z-index:2;pointer-events:none;"></div>
  <!-- Marquee track — tripled for seamless loop -->
  <div class="marquee-track" style="display:flex;gap:3rem;width:max-content;animation:marquee-scroll 28s linear infinite;">
    {[...trustedLogos, ...trustedLogos, ...trustedLogos].map((logo) => (
      <div style="display:flex;align-items:center;flex-shrink:0;">
        <Image
          src={logo.src}
          alt={logo.alt}
          class="h-9 max-w-[110px] w-auto object-contain opacity-70 hover:opacity-90 transition-opacity duration-300"
          height={48}
        />
      </div>
    ))}
  </div>
</section>

<!-- Hero Section -->
<main class="pt-10 md:pt-14 pb-0 relative" style="z-index:10;">

  <div class="max-w-screen-2xl mx-auto px-6 lg:px-16 relative z-10">

    <!-- Centered hero text -->
    <div class="max-w-3xl mx-auto text-center animate-fade-in-up pb-10 md:pb-14">

      <h1
        class="hero-main-title text-4xl lg:text-5xl xl:text-6xl font-extrabold tracking-tight text-white">
        Every Business NOT Using AI in 2026 is Losing Revenue by the Minute
      </h1>
      <p class="hero-subtitle text-xl md:text-2xl mt-4 text-yellow font-bold text-center mx-auto">
        Eliminate Friction and Accelerate Growth<br/>Using Our Custom AI Revenue Engine
      </p>

      <!-- CTA button -->
      <div class="mt-8 animate-fade-in-up delay-300 flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/free-ai-diagnostic"
          class="inline-flex items-center justify-center gap-2 bg-yellow hover:bg-yellow-light text-navy font-bold px-8 py-4 rounded-full transition-all duration-300 hover:shadow-lg hover:shadow-yellow/30 text-lg">
          Get Your Free Diagnostic
          <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>

    <!-- Keyboard — hero product visual, full width below CTA -->
    <div class="w-full flex items-center justify-center animate-fade-in-up delay-200 kb-wrapper pb-10 md:pb-16" id="hero-kb-wrapper">
      <div class="kb-container" id="kb-container">

        <!-- LED Screen -->
        <div class="kb-screen" id="kb-screen">
          <div class="kb-screen-content">
            <span class="kb-screen-prompt">&gt;</span>
            <span class="kb-screen-text" id="kb-screen-text">AI REVENUE ENGINE&trade;</span>
            <span class="kb-screen-cursor">&#x2588;</span>
          </div>
        </div>

        <!-- Keyboard Body -->
        <div class="kb-body">

          <!-- Row 1 -->
          <div class="kb-row">
            <div class="kb-key kb-key-sm">ESC</div>
            <div class="kb-key kb-key-sm">Q</div>
            <div class="kb-key kb-key-sm">W</div>
            <div class="kb-key kb-key-value kb-key-yellow" data-val="No Retainers / Upfront Costs">No Retainers /<br/>Upfront Costs</div>
            <div class="kb-key kb-key-sm">R</div>
            <div class="kb-key kb-key-sm">T</div>
          </div>

          <!-- Row 2 -->
          <div class="kb-row">
            <div class="kb-key kb-key-sm">A</div>
            <div class="kb-key kb-key-sm">S</div>
            <div class="kb-key kb-key-value kb-key-blue" data-val="Pay on Results Only">Pay on Results Only</div>
            <div class="kb-key kb-key-sm">D</div>
            <div class="kb-key kb-key-value kb-key-yellow" data-val="On Demand Multidisciplinary Team">On Demand<br/>Multidisciplinary Team</div>
            <div class="kb-key kb-key-sm">F</div>
          </div>

          <!-- Row 3 -->
          <div class="kb-row">
            <div class="kb-key kb-key-sm">Z</div>
            <div class="kb-key kb-key-sm">X</div>
            <div class="kb-key kb-key-value kb-key-blue" data-val="Zero Friction, Done for You System">Zero Friction,<br/>Done for You System</div>
            <div class="kb-key kb-key-sm">V</div>
            <div class="kb-key kb-key-value kb-key-green" data-val="Results in Weeks">Results in Weeks</div>
          </div>

          <!-- Spacebar -->
          <div class="kb-row">
            <div class="kb-key kb-key-space kb-key-yellow" data-val="AI REVENUE ENGINE™">AI REVENUE ENGINE&trade;</div>
          </div>

        </div><!-- /kb-body -->
      </div><!-- /kb-container -->
    </div><!-- /hero kb wrapper -->

  </div>
</main>
</div><!-- /hero-bg-wrapper -->

<!-- Credentials Section -->
<section id="section-credentials" style="background:#080e18; padding: 5rem 0 4.5rem;">
  <div class="max-w-screen-2xl mx-auto px-8 lg:px-16">
    <div class="cred-split reveal">

      <!-- Left: quote + credential cards -->
      <div class="cred-left-col">

        <blockquote class="cred-section-quote">
          It's no longer <span class="text-yellow">"the big that beats the small"</span>
          <br/>it's <span class="text-yellow">"the fast that runs over the slow"</span>
        </blockquote>

        <div class="cred-cards-row">
          <!-- Graduation cap — qualifications -->
          <div class="cred-card cred-card--yellow">
            <span class="cred-card-bar"></span>
            <div class="cred-card-content">
              <svg class="cred-card-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 10v6M2 10l10-5 10 5-10 5z"/><path d="M6 12v5c0 1.1 2.7 3 6 3s6-1.9 6-3v-5"/>
              </svg>
              <p>Specialists with BSc (Hons) and MSc qualifications in computer science and psychology</p>
            </div>
          </div>
          <!-- University building �� top 10 -->
          <div class="cred-card cred-card--blue">
            <span class="cred-card-bar"></span>
            <div class="cred-card-content">
              <svg class="cred-card-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                <path d="M2 20h20M4 20V10l8-6 8 6v10"/><path d="M9 20v-4a3 3 0 016 0v4"/><line x1="12" y1="7" x2="12" y2="7.01"/>
              </svg>
              <p>Graduate experts from top 10 universities</p>
            </div>
          </div>
          <!-- Clock — 15 years experience -->
          <div class="cred-card cred-card--green">
            <span class="cred-card-bar"></span>
            <div class="cred-card-content">
              <svg class="cred-card-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/>
              </svg>
              <p>Over 15 years experience in building and optimizing client acquisition systems</p>
            </div>
          </div>
        </div>

      </div>

      <!-- Right: live metrics dashboard -->
      <div class="cred-right-col">
        <div class="cred-dash" id="cred-dash">
          <!-- Dot grid background -->
          <div class="cred-dash-grid" aria-hidden="true"></div>

          <!-- Top row: mini stat cards -->
          <div class="cred-dash-stats">
            <div class="cred-dash-stat">
              <span class="cred-dash-stat-label">Response Time</span>
              <span class="cred-dash-stat-val" data-target="1.2" data-suffix="s">0s</span>
              <span class="cred-dash-stat-delta cred-dash-stat-delta--good">-94%</span>
            </div>
            <div class="cred-dash-stat">
              <span class="cred-dash-stat-label">Booking Rate</span>
              <span class="cred-dash-stat-val" data-target="98" data-suffix="%">0%</span>
              <span class="cred-dash-stat-delta cred-dash-stat-delta--good">+42%</span>
            </div>
            <div class="cred-dash-stat">
              <span class="cred-dash-stat-label">Revenue Lift</span>
              <span class="cred-dash-stat-val" data-target="50" data-suffix="%">0%</span>
              <span class="cred-dash-stat-delta cred-dash-stat-delta--good">+50%</span>
            </div>
          </div>

          <!-- Animated bar chart -->
          <div class="cred-dash-chart">
            <div class="cred-dash-chart-label">Monthly Revenue</div>
            <div class="cred-dash-bars">
              <div class="cred-dash-bar" style="--bar-h:35%;--bar-delay:0s;"></div>
              <div class="cred-dash-bar" style="--bar-h:48%;--bar-delay:0.1s;"></div>
              <div class="cred-dash-bar" style="--bar-h:42%;--bar-delay:0.2s;"></div>
              <div class="cred-dash-bar" style="--bar-h:58%;--bar-delay:0.3s;"></div>
              <div class="cred-dash-bar" style="--bar-h:52%;--bar-delay:0.4s;"></div>
              <div class="cred-dash-bar" style="--bar-h:68%;--bar-delay:0.5s;"></div>
              <div class="cred-dash-bar" style="--bar-h:75%;--bar-delay:0.6s;"></div>
              <div class="cred-dash-bar cred-dash-bar--highlight" style="--bar-h:92%;--bar-delay:0.7s;"></div>
            </div>
          </div>

          <!-- Sparkline row -->
          <div class="cred-dash-sparkrow">
            <div class="cred-dash-spark">
              <span class="cred-dash-spark-label">Leads</span>
              <svg class="cred-dash-sparkline" viewBox="0 0 80 24" fill="none" aria-hidden="true">
                <polyline points="0,20 10,18 20,14 30,16 40,10 50,12 60,6 70,4 80,2" stroke="#D8B743" stroke-width="2" fill="none"/>
                <polyline points="0,20 10,18 20,14 30,16 40,10 50,12 60,6 70,4 80,2" stroke="none" fill="url(#sparkGold)" opacity="0.15"/>
                <defs><linearGradient id="sparkGold" x1="0" y1="0" x2="0" y2="1"><stop offset="0%" stop-color="#D8B743"/><stop offset="100%" stop-color="transparent"/></linearGradient></defs>
              </svg>
            </div>
            <div class="cred-dash-spark">
              <span class="cred-dash-spark-label">Bookings</span>
              <svg class="cred-dash-sparkline" viewBox="0 0 80 24" fill="none" aria-hidden="true">
                <polyline points="0,22 10,20 20,17 30,15 40,12 50,10 60,7 70,5 80,3" stroke="#3DB2DD" stroke-width="2" fill="none"/>
                <polyline points="0,22 10,20 20,17 30,15 40,12 50,10 60,7 70,5 80,3" stroke="none" fill="url(#sparkBlue)" opacity="0.15"/>
                <defs><linearGradient id="sparkBlue" x1="0" y1="0" x2="0" y2="1"><stop offset="0%" stop-color="#3DB2DD"/><stop offset="100%" stop-color="transparent"/></linearGradient></defs>
              </svg>
            </div>
          </div>

          <!-- Live pulse dot -->
          <div class="cred-dash-live">
            <span class="cred-dash-live-dot"></span>
            <span class="cred-dash-live-text">Live</span>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<!-- Kill Zone / Engagement Latency Section -->
<section id="section-killzone" class="kill-zone-section relative overflow-hidden" style="background: #f0f2f5;">
  <div class="max-w-screen-2xl mx-auto px-8 lg:px-16">

    <!-- Two-column layout: race visual left, copy right -->
    <div class="kill-zone-grid">

      <!-- LEFT COLUMN: Donut clock -->
      <div class="kill-zone-graphic-col reveal">
        <div class="kz-race" id="kz-race">
          <!-- Title -->
          <div class="kz-race-title">THE KILL ZONE</div>
          <div class="kz-race-tagline">Engagement Latency</div>
          <div class="kz-race-subtitle">The time gap between customer interest and your business's meaningful response.</div>

          <!-- Donut ring -->
          <div class="kz-ring-wrap">
            <svg class="kz-ring-svg" viewBox="0 0 240 240" id="kz-ring-svg">
              <circle class="kz-ring-track" cx="120" cy="120" r="96" fill="none" stroke-width="20"/>
              <circle class="kz-ring-progress" id="kz-ring-progress" cx="120" cy="120" r="96" fill="none" stroke-width="20" stroke-linecap="round" transform="rotate(-90 120 120)"/>
            </svg>
            <div class="kz-ring-center">
              <!-- Incoming lead animation (shows first, then hides) -->
              <div class="kz-ring-incoming" id="kz-ring-incoming">
                <svg class="kz-incoming-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
                <span class="kz-incoming-text">New lead!</span>
              </div>
              <!-- Timer (hidden initially, shown after intro) -->
              <div class="kz-ring-timer" id="kz-ring-timer" style="display:none;">
                <div class="kz-ring-time" id="kz-ring-time">0s</div>
                <div class="kz-ring-label" id="kz-ring-label">Your Response Time</div>
              </div>
            </div>
          </div>

          <!-- Milestone status -->
          <div class="kz-milestone" id="kz-milestone"></div>

          <!-- Final death blow -->
          <div class="kz-race-gap" id="kz-race-gap">
            <div class="kz-race-gap-label" id="kz-gap-label"></div>
          </div>
        </div>
      </div>

      <!-- RIGHT COLUMN: Copy blocks -->
      <div class="kill-zone-copy-col">
        <div class="kill-zone-copy-block kz-copy-reveal" style="--kz-delay: 0ms">
          <p class="kill-zone-copy">
            Your competition is already <span class="kz-text-accent">closing this gap with AI.</span><br/>
            If you don't program <span class="kz-text-accent">instantaneous response, you're invisible.</span>
          </p>
        </div>

        <div class="kill-zone-copy-divider"></div>

        <div class="kill-zone-copy-block kz-copy-reveal" style="--kz-delay: 120ms">
          <p class="kill-zone-copy">
            Speed is now the ultimate currency and 'lead response latency' is the difference between closing a deal and losing it to a competitor who instantly responds.
          </p>
        </div>

        <div class="kill-zone-copy-divider"></div>

        <div class="kill-zone-copy-block kz-copy-reveal" style="--kz-delay: 240ms">
          <p class="kill-zone-copy">
            Most companies believe buying updated software fixes this, but they lack the adaptive ecosystem to make it work.
          </p>
        </div>

        <div class="kill-zone-copy-divider"></div>

        <div class="kill-zone-copy-block kz-copy-reveal kz-copy-final" style="--kz-delay: 360ms">
          <p class="kill-zone-copy">
            You have the tools... but not the strategy.
          </p>
        </div>
      </div>

    </div>
  </div>
</section>

<!-- 3 Metrics Section — Stripe-inspired bento -->
<section id="section-metrics" class="py-20 md:py-32 relative overflow-hidden" style="background:#0f2138;">
  <!-- Background atmosphere -->
  <div class="metrics-bg-grid"></div>
  <div class="metrics-bg-glow metrics-bg-glow-1"></div>
  <div class="metrics-bg-glow metrics-bg-glow-2"></div>

  <div class="max-w-screen-2xl mx-auto px-8 lg:px-16 relative" style="z-index:1;">

    <!-- Title -->
    <h2 class="text-3xl lg:text-4xl xl:text-5xl font-bold leading-tight mb-16 max-w-3xl reveal" style="color:#fff;">
      You Need a Fractional AI Growth Team That Measures and Optimizes These <span style="color:#D8B743;">3</span> Metrics
    </h2>

    <!-- Asymmetric bento grid — EFFICIENCY featured, SPEED side -->
    <div class="metrics-bento">

      <!-- EFFICIENCY — featured large card (left) -->
      <div class="m-card m-card-efficiency reveal" style="--delay:0ms;">
        <div class="m-card-text">
          <span class="m-card-label" style="color:#D8B743;">EFFICIENCY</span>
          <h3 class="m-card-heading">Handling Time vs. Deflection Savings</h3>
          <p class="m-card-desc">The specific calculation of time and money that could be reclaimed through hands-free automation.</p>
        </div>
        <!-- Horizontal bars visualization -->
        <div class="m-viz m-viz-bars">
          <div class="bar-row">
            <div class="bar-row-label">Manual</div>
            <div class="bar-track">
              <div class="bar-fill bar-fill-manual" style="--bar-width:85%; --bar-color:rgba(216,183,67,0.2);">
                <span class="bar-val">6.2 hrs/day</span>
              </div>
            </div>
          </div>
          <div class="bar-row">
            <div class="bar-row-label">Automated</div>
            <div class="bar-track">
              <div class="bar-fill bar-fill-auto" style="--bar-width:12%; --bar-color:#D8B743;">
                <span class="bar-val">0.4 hrs</span>
              </div>
            </div>
          </div>
          <div class="bar-row">
            <div class="bar-row-label">Savings</div>
            <div class="bar-track">
              <div class="bar-fill bar-fill-savings" style="--bar-width:68%; --bar-color:rgba(216,183,67,0.5);">
                <span class="bar-val">93% reclaimed</span>
              </div>
            </div>
          </div>
          <div class="bar-caption">Time reclaimed through AI deflection</div>
        </div>
      </div>

      <!-- SPEED — compact side card (right) -->
      <div class="m-card m-card-speed reveal" style="--delay:80ms;">
        <div class="m-card-text">
          <span class="m-card-label" style="color:#3DB2DD;">SPEED</span>
          <h3 class="m-card-heading">Engagement Latency</h3>
          <p class="m-card-desc">The portion of new business lost to competitors due to engagement method and response time.</p>
        </div>
        <!-- Compact gauge -->
        <div class="m-viz m-viz-gauge">
          <svg class="gauge-svg" viewBox="0 0 220 135">
            <path class="gauge-track" d="M25,120 A85,85 0 0,1 195,120" fill="none" stroke="rgba(61,178,221,0.1)" stroke-width="14" stroke-linecap="round"/>
            <path class="gauge-fill" d="M25,120 A85,85 0 0,1 195,120" fill="none" stroke="#3DB2DD" stroke-width="14" stroke-linecap="round"/>
            <text x="110" y="95" text-anchor="middle" fill="#fff" font-size="32" font-weight="700" class="gauge-value-text">&lt;1</text>
            <text x="110" y="116" text-anchor="middle" fill="rgba(255,255,255,0.4)" font-size="10" font-weight="500" letter-spacing="0.08em">MIN RESPONSE</text>
          </svg>
          <div class="gauge-legend">
            <div class="gauge-legend-item">
              <span class="gauge-legend-dot" style="background:rgba(61,178,221,0.2);"></span>
              <span class="gauge-legend-text">Industry avg: 47 hrs</span>
            </div>
            <div class="gauge-legend-item">
              <span class="gauge-legend-dot" style="background:#3DB2DD;"></span>
              <span class="gauge-legend-text">With AI: &lt;1 min</span>
            </div>
          </div>
        </div>
      </div>

      <!-- REVENUE — full-width bottom card -->
      <div class="m-card m-card-revenue reveal" style="--delay:160ms;">
        <div class="m-card-revenue-inner">
          <div class="m-card-text">
            <span class="m-card-label" style="color:#6BB790;">REVENUE</span>
            <h3 class="m-card-heading">Opportunity Cost</h3>
            <p class="m-card-desc">The impact of current, inefficient strategies on team morale and revenue generation.</p>
          </div>
          <!-- Line chart -->
          <div class="m-viz m-viz-chart">
            <svg class="chart-svg" viewBox="0 0 480 140" preserveAspectRatio="none">
              <line x1="0" y1="35" x2="480" y2="35" stroke="rgba(255,255,255,0.03)" stroke-width="1"/>
              <line x1="0" y1="70" x2="480" y2="70" stroke="rgba(255,255,255,0.03)" stroke-width="1"/>
              <line x1="0" y1="105" x2="480" y2="105" stroke="rgba(255,255,255,0.03)" stroke-width="1"/>
              <path class="chart-area" d="M0,125 L60,118 L120,112 L180,98 L240,75 L300,48 L360,30 L420,18 L480,8 L480,140 L0,140 Z" fill="url(#chartGradM)"/>
              <polyline class="chart-line" points="0,125 60,118 120,112 180,98 240,75 300,48 360,30 420,18 480,8" fill="none" stroke="#6BB790" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <circle class="chart-dot" cx="480" cy="8" r="4" fill="#6BB790"/>
              <circle class="chart-dot-pulse" cx="480" cy="8" r="4" fill="#6BB790" opacity="0.4"/>
              <defs>
                <linearGradient id="chartGradM" x1="0" y1="0" x2="0" y2="1">
                  <stop offset="0%" stop-color="#6BB790" stop-opacity="0.2"/>
                  <stop offset="100%" stop-color="#6BB790" stop-opacity="0"/>
                </linearGradient>
              </defs>
