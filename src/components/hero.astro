      var t = time * WAVE_SPEED;

      // Update Z (wave + mouse ripple)
      for (var i = 0; i < points.length; i++) {
        var p = points[i];
        p.z = Math.sin(p.gx * 0.012 + t) * WAVE_AMP
            + Math.sin(p.gy * 0.018 + t * 1.3) * WAVE_AMP * 0.6
            + Math.sin((p.gx + p.gy) * 0.008 + t * 0.7) * WAVE_AMP * 0.4;
        var mdx = mouse.x - p.gx, mdy = mouse.y - p.gy;
        var mDist = Math.sqrt(mdx * mdx + mdy * mdy);
