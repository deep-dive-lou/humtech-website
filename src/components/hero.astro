    <div class="mt-4 mb-3 animate-fade-in-up delay-300">
      <div class="hero-core-shell mx-auto max-w-4xl">
        <div class="block md:hidden">
          <Image
            src={heroCoreGraphic}
            alt="HumTech Core"
            class="mx-auto w-full max-w-none h-auto"
            widths={[400, 640, 768]}
            sizes="(max-width: 768px) 100vw, 640px"
          />
        </div>

        <div class="hidden md:block">
          <div class="hero-core-glow" aria-hidden="true"></div>
          <div class="hero-core-grid" aria-hidden="true"></div>
          <div class="hero-core-techlines" aria-hidden="true"></div>
          <div class="hero-core-diagram" role="img" aria-label="AI Revenue Engine - Pay on Performance, No Retainers, Pay on Results, On Demand Multidisciplinary Team, Done for You System, Results in Weeks">
          <svg class="hero-core-links hero-core-lines hero-core-links-desktop" viewBox="0 0 1000 420" preserveAspectRatio="none" aria-hidden="true">
            <line x1="472" y1="210" x2="347" y2="137" />
            <line x1="472" y1="210" x2="347" y2="210" />
            <line x1="472" y1="210" x2="347" y2="283" />
            <line x1="528" y1="210" x2="680" y2="137" />
            <line x1="528" y1="210" x2="680" y2="210" />
            <line x1="528" y1="210" x2="680" y2="283" />
          </svg>
