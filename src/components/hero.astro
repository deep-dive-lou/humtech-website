      <!-- Card 3: Experience -->
      <div class="cred-card group">
        <div class="cred-card-inner">
          <div class="mb-4">
            <svg class="w-12 h-12 text-yellow" viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="24" cy="24" r="18" />
              <circle cx="24" cy="24" r="14" />
