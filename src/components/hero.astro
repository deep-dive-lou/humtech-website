      for (var row = 0; row < ROWS; row++) {
        ctx.beginPath();
        for (var col = 0; col < COLS; col++) {
          var p = points[row * COLS + col];
          var proj = project(p.gx, p.gy, p.z);
          if (col === 0) ctx.moveTo(proj.x, proj.y);
          else ctx.lineTo(proj.x, proj.y);
        }
        var rowFade = Math.min(row / ROWS * 4, (1 - row / ROWS) * 4, 1);
        ctx.strokeStyle = 'rgba(61,178,221,' + (0.06 * rowFade) + ')';
        ctx.lineWidth = 0.5;
        ctx.stroke();
      }

      // Draw vertical grid lines
      for (var col = 0; col < COLS; col++) {
        ctx.beginPath();
        for (var row2 = 0; row2 < ROWS; row2++) {
          var p = points[row2 * COLS + col];
          var proj = project(p.gx, p.gy, p.z);
          if (row2 === 0) ctx.moveTo(proj.x, proj.y);
          else ctx.lineTo(proj.x, proj.y);
        }
        var colFade = Math.min(col / COLS * 4, (1 - col / COLS) * 4, 1);
        ctx.strokeStyle = 'rgba(61,178,221,' + (0.06 * colFade) + ')';
        ctx.lineWidth = 0.5;
        ctx.stroke();
      }

      // Draw particles at intersections
      for (var i = 0; i < points.length; i++) {
        var p = points[i];
        var proj = project(p.gx, p.gy, p.z);
        if (proj.x < -20 || proj.x > canvas.width + 20 || proj.y < -20 || proj.y > canvas.height + 20) continue;

        var heightGlow = Math.max(0, p.z / (WAVE_AMP * 2));
        var nDx = mouse.x - p.gx, nDy = mouse.y - p.gy;
        var nDist = Math.sqrt(nDx * nDx + nDy * nDy);
        var mouseGlow = nDist < MOUSE_RADIUS ? (1 - nDist / MOUSE_RADIUS) : 0;
        var fade = Math.min(p.row / ROWS * 3, (1 - p.row / ROWS) * 3, p.col / COLS * 3, (1 - p.col / COLS) * 3, 1);
        var baseR = 1.2 * proj.scale;

        ctx.save();
        if (p.isAccent) {
          ctx.globalAlpha = Math.min((0.5 + heightGlow * 0.4 + mouseGlow * 0.4) * fade, 1);
          ctx.fillStyle = 'rgba(216,183,67,1)';
          ctx.shadowBlur = 8 + mouseGlow * 14 + heightGlow * 8;
          ctx.shadowColor = 'rgba(216,183,67,0.7)';
          baseR *= 2.2;
        } else {
          ctx.globalAlpha = Math.min((0.15 + heightGlow * 0.3 + mouseGlow * 0.4) * fade, 1);
          ctx.fillStyle = 'rgba(61,178,221,1)';
          ctx.shadowBlur = mouseGlow * 8 + heightGlow * 4;
          ctx.shadowColor = 'rgba(61,178,221,0.5)';
        }
        ctx.beginPath();
        ctx.arc(proj.x, proj.y, baseR + mouseGlow * 2, 0, Math.PI * 2);
        ctx.fill();
        ctx.restore();
      }

