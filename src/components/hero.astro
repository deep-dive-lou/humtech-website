  </div>
  <!-- Trusted By & Credentials Section -->
  <section class="pt-10 md:pt-12 pb-14 md:pb-16">
  <div class="max-w-5xl mx-auto px-4">
    <!-- Trusted By -->
    <div class="text-center mb-10">
      <div class="trusted-by-head-wrap">
        <h3 class="trusted-by-heading">Trusted by:</h3>
      </div>
