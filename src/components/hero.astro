      { duration: 500,  startSec: 14400,endSec: 14400, ringEnd: 100, milestone: null,                                     shake: 2, color: 'red' },
    ];

    function setRingProgress(pct, color) {
      if (!ringProgress) return;
      var offset = CIRCUMFERENCE * (1 - pct / 100);
      ringProgress.style.strokeDashoffset = offset;
      ringProgress.style.stroke = color === 'green' ? '#6BB790' : '#dc2626';
    }

    function resetRace() {
      if (ringProgress) { ringProgress.style.strokeDashoffset = CIRCUMFERENCE; ringProgress.style.stroke = '#6BB790'; }
      if (ringTime) { ringTime.textContent = '0s'; ringTime.style.color = '#6BB790'; }
      if (ringLabel) ringLabel.style.display = '';
      if (raceCard) raceCard.classList.remove('kz-shaking-light', 'kz-shaking', 'kz-shaking-heavy');
      if (milestone) { milestone.className = 'kz-milestone'; milestone.textContent = ''; }
      if (gapEl) gapEl.classList.remove('kz-gap-visible');
      if (gapLabel) gapLabel.textContent = '';
      // Reset incoming/timer visibility
      if (ringIncoming) { ringIncoming.style.display = ''; ringIncoming.className = 'kz-ring-incoming'; }
      if (ringTimer) ringTimer.style.display = 'none';
    }

    function animateRace() {
      resetRace();

      // Step 1: Show incoming lead animation
      if (ringIncoming) {
        ringIncoming.style.display = '';
        ringIncoming.classList.add('kz-incoming-pop');
      }

      // Step 2: After hold, fade out incoming and start timer
      setTimeout(function() {
        if (ringIncoming) {
          ringIncoming.classList.remove('kz-incoming-pop');
          ringIncoming.classList.add('kz-incoming-fade');
        }
        setTimeout(function() {
          if (ringIncoming) ringIncoming.style.display = 'none';
          if (ringTimer) ringTimer.style.display = '';
          startStages();
        }, 400);
      }, 1200);
    }

    function startStages() {
      var stageIndex = 0;
      var prevRing = 0;

      function runStage() {
        if (stageIndex >= stages.length) {
          if (raceCard) raceCard.classList.remove('kz-shaking-light', 'kz-shaking', 'kz-shaking-heavy');
          if (raceCard) raceCard.classList.add('kz-shaking-heavy');
          if (milestone) { milestone.className = 'kz-milestone'; milestone.textContent = ''; }
          if (ringTime) { ringTime.textContent = 'LOST'; ringTime.style.color = '#dc2626'; }
          if (ringLabel) ringLabel.style.display = 'none';
          if (gapEl) gapEl.classList.add('kz-gap-visible');
          if (gapLabel) gapLabel.textContent = 'LEAD LOST TO YOUR COMPETITORS';

          setTimeout(function() {
            if (raceCard) raceCard.classList.remove('kz-shaking-heavy');
            setTimeout(animateRace, 3500);
          }, 1800);
          return;
        }

        var stage = stages[stageIndex];
        var stageStart = performance.now();

        if (milestone) { milestone.className = 'kz-milestone'; milestone.textContent = ''; }

        if (raceCard) {
          raceCard.classList.remove('kz-shaking-light', 'kz-shaking', 'kz-shaking-heavy');
          if (stage.shake === 1) raceCard.classList.add('kz-shaking-light');
          if (stage.shake === 2) raceCard.classList.add('kz-shaking');
          if (stage.shake === 3) raceCard.classList.add('kz-shaking-heavy');
        }

        function tick(now) {
          var t = Math.min((now - stageStart) / stage.duration, 1);

          var ringPct = prevRing + (stage.ringEnd - prevRing) * t;
          setRingProgress(ringPct, stage.color);

          var sec = Math.floor(stage.startSec + (stage.endSec - stage.startSec) * t);
          if (ringTime) {
            ringTime.textContent = formatTime(sec);
            ringTime.style.color = stage.color === 'green' ? '#6BB790' : '#dc2626';
          }

          if (t < 1) {
            requestAnimationFrame(tick);
          } else {
            prevRing = stage.ringEnd;
            stageIndex++;

            if (stage.milestone && milestone) {
              milestone.textContent = stage.milestone;
              milestone.className = 'kz-milestone kz-milestone-pop' + (stage.color === 'green' ? ' kz-milestone-green' : '');
            }
            setTimeout(runStage, stage.milestone ? 2000 : 0);
          }
        }
        requestAnimationFrame(tick);
      }

      runStage();
    }

    var kzObserver = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting && !fired) {
          fired = true;

          animateRace();

          copyBlocks.forEach(function(block) {
            var delay = parseInt(getComputedStyle(block).getPropertyValue('--kz-delay')) || 0;
