---
import Container from "@/components/container.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Contact">
  <div class="bg-navy">
    <Container>
      <!-- Hero -->
      <section class="py-20 md:py-28">
        <div class="max-w-4xl mx-auto px-4 text-center">
          <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold lg:tracking-tight text-white">
            Get In Touch
          </h1>
          <p class="text-xl text-white/70 mt-6 max-w-2xl mx-auto">
            Ready to transform your business with AI? We'd love to hear from you.
          </p>
        </div>
      </section>

      <!-- Contact Content -->
      <section class="pb-20 md:pb-28">
        <div class="max-w-5xl mx-auto px-4">
          <div class="grid md:grid-cols-2 gap-12">
            <!-- Contact Info -->
            <div>
              <h2 class="text-2xl font-bold text-white mb-6">Contact HumTech</h2>
              <p class="text-lg text-white/70 mb-8">
                Have questions about our AI solutions? Want to discuss how we can help your business? Reach out and we'll get back to you promptly.
              </p>

              <div class="space-y-6">
                <!-- Email -->
                <a href="mailto:hello@humtech.ai" class="flex items-center gap-4 p-4 bg-white/5 rounded-xl border border-white/10 hover:bg-white/10 transition-colors group">
                  <div class="w-12 h-12 bg-yellow/20 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="text-white/60 text-sm">Email us</p>
                    <p class="text-white font-semibold group-hover:text-yellow transition-colors">hello@humtech.ai</p>
                  </div>
                </a>

                <!-- Phone -->
                <a href="tel:+447869283384" class="flex items-center gap-4 p-4 bg-white/5 rounded-xl border border-white/10 hover:bg-white/10 transition-colors group">
                  <div class="w-12 h-12 bg-blue/20 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="text-white/60 text-sm">Call us</p>
                    <p class="text-white font-semibold group-hover:text-blue transition-colors">+44 7869 283384</p>
                  </div>
                </a>

                <!-- Facebook -->
                <a href="#" class="flex items-center gap-4 p-4 bg-white/5 rounded-xl border border-white/10 hover:bg-white/10 transition-colors group">
                  <div class="w-12 h-12 bg-green/20 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-green" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-white/60 text-sm">Follow us</p>
                    <p class="text-white font-semibold group-hover:text-green transition-colors">Facebook</p>
                  </div>
                </a>
              </div>
            </div>

            <!-- Contact Form -->
            <div class="p-8 bg-white/5 rounded-2xl border border-white/10">
              <h3 class="text-xl font-bold text-white mb-6">Send us a message</h3>

              <form
                id="form"
                class="needs-validation space-y-5"
                novalidate>

                <div>
                  <input
                    type="text"
                    placeholder="Full Name"
                    required
                    class="w-full px-4 py-3 bg-white/5 border border-white/20 placeholder:text-white/40 text-white rounded-lg outline-none focus:ring-2 focus:ring-yellow/50 focus:border-yellow/50 transition-colors"
                    name="name"
                  />
                  <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
                    Please provide your full name.
                  </div>
                </div>

                <div>
                  <input
                    type="email"
                    placeholder="Email Address"
                    name="email"
                    required
                    class="w-full px-4 py-3 bg-white/5 border border-white/20 placeholder:text-white/40 text-white rounded-lg outline-none focus:ring-2 focus:ring-yellow/50 focus:border-yellow/50 transition-colors"
                  />
                  <div class="empty-feedback text-red-400 text-sm mt-1">
                    Please provide your email address.
                  </div>
                  <div class="invalid-feedback text-red-400 text-sm mt-1">
                    Please provide a valid email address.
                  </div>
                </div>

                <div>
                  <textarea
                    name="message"
                    required
                    placeholder="Your Message"
                    class="w-full px-4 py-3 bg-white/5 border border-white/20 placeholder:text-white/40 text-white rounded-lg outline-none h-32 focus:ring-2 focus:ring-yellow/50 focus:border-yellow/50 transition-colors resize-none"
                  ></textarea>
                  <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
                    Please enter your message.
                  </div>
                </div>

                <button
                  type="submit"
                  class="w-full px-6 py-3 rounded-lg font-semibold bg-yellow text-navy hover:bg-yellow/90 transition-colors cursor-pointer">
                  Send Message
                </button>

                <div id="result" class="text-center"></div>
              </form>
            </div>
          </div>
        </div>
      </section>

      <!-- CTA -->
      <section class="py-16 border-t border-white/10">
        <div class="max-w-2xl mx-auto px-4 text-center">
          <h2 class="text-2xl lg:text-3xl font-bold text-white mb-4">Not sure where to start?</h2>
          <p class="text-white/70 mb-8">Take our free assessment to discover exactly where AI can help your business.</p>
          <button
            onclick="openAssessmentModal()"
            class="px-8 py-4 rounded-md font-semibold bg-yellow text-navy hover:bg-yellow/90 transition-colors inline-flex items-center justify-center cursor-pointer text-lg">
            Start Free Assessment
          </button>
        </div>
      </section>
    </Container>
  </div>
</Layout>

<style>
  .invalid-feedback,
  .empty-feedback {
    display: none;
  }

  .was-validated :placeholder-shown:invalid ~ .empty-feedback {
    display: block;
  }

  .was-validated :not(:placeholder-shown):invalid ~ .invalid-feedback {
    display: block;
  }

  .is-invalid,
  .was-validated :invalid {
    border-color: #dc3545;
  }
</style>

<script is:inline>
  const form = document.getElementById("form");
  const result = document.getElementById("result");

  form.addEventListener("submit", function (e) {
    e.preventDefault();
    form.classList.add("was-validated");
    if (!form.checkValidity()) {
      form.querySelectorAll(":invalid")[0].focus();
      return;
    }
    const formData = new FormData(form);
    const object = Object.fromEntries(formData);
    const json = JSON.stringify(object);

    result.innerHTML = "Sending...";
    result.className = "text-center text-white/70";

    fetch("https://services.leadconnectorhq.com/hooks/V7m7dlgTERFjn0t4soSv/webhook-trigger/df75c785-e015-4136-a2a8-67abc4f809d6", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: json,
    })
      .then(async (response) => {
        if (response.ok) {
          result.className = "text-center text-green";
          result.innerHTML = "Message sent successfully!";
        } else {
          console.log(response);
          result.className = "text-center text-red-400";
          result.innerHTML = "Something went wrong. Please try again.";
        }
      })
      .catch((error) => {
        console.log(error);
        result.className = "text-center text-red-400";
        result.innerHTML = "Something went wrong!";
      })
      .then(function () {
        form.reset();
        form.classList.remove("was-validated");
        setTimeout(() => {
          result.style.display = "none";
        }, 5000);
      });
  });
</script>
