---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";

const whyThisWorks = [
  {
    title: "Performance-Based SLA's",
    copy: "We work to hit your ROI targets, and stay with you to set new goals."
  },
  {
    title: "Direct Strategist Access",
    copy: "Direct access to senior strategists with extensive experience."
  },
  {
    title: "Futureproofing",
    copy: "Stay ahead with the latest AI implementations and strategic enhancements."
  },
  {
    title: "Enterprise Strategy, SME Price",
    copy: "Top-tier AI planning and execution without full-time overheads."
  },
  {
    title: "Hands-Off Implementation",
    copy: "We build, deploy, train, and maintain systems with minimal disruption."
  },
  {
    title: "Tailored Solutions",
    copy: "Custom systems and ongoing guidance aligned to your business model."
  }
];

const solutions = [
  {
    number: "01",
    title: "24/7 Lead Engagement System",
    objective: "Ensure every new lead is engaged immediately to reduce delay and protect revenue.",
    coverage: [
      "In-hours and out-of-hours response",
      "Qualification and intent capture",
      "Booking and confirmation flow"
    ],
    delivery: [
      "System design and implementation",
      "CRM, calendar, and workflow integration",
      "Training, handover, and optimisation"
    ],
    clarity: [
      "Enquiry-to-response speed",
      "Lead-to-booking conversion",
      "Attendance and no-show rates"
    ]
  },
  {
    number: "02",
    title: "Branded Document/E-Signature Portal",
    objective: "Reduce admin drag and completion delay while improving trust and compliance.",
    coverage: [
      "Document requests and e-signatures",
      "Automated reminders and follow-up",
      "Centralised request visibility"
    ],
    delivery: [
      "Branded portal build",
      "Automation of requests and confirmations",
      "Secure storage and process alignment"
    ],
    clarity: [
      "Request-to-completion time",
      "Manual chasing reduction",
      "Completion rates by request type"
    ]
  },
  {
    number: "03",
    title: "Business Clarity Engine",
    objective: "Create a repeatable operating model with stronger visibility and less manual effort.",
    coverage: [
      "Workflow and CRM optimisation",
      "Repetitive task automation",
      "KPI and reporting alignment"
    ],
    delivery: [
      "Workflow and reporting review",
      "High-friction process automation",
      "Dashboard and summary deployment"
    ],
    clarity: [
      "Where time is being lost",
      "Which metrics leadership should trust",
      "What needs immediate attention"
    ]
  },
  {
    number: "04",
    title: "Marketing Performance Suite",
    objective: "Strengthen acquisition performance with clearer decision-making and tighter budget-to-return alignment.",
    coverage: [
      "Acquisition and conversion performance analysis",
      "Channel efficiency and spend allocation",
      "Offer and messaging optimisation"
    ],
    delivery: [
      "Marketing systems audit",
      "Executive optimisation session",
      "Ongoing strategic oversight and advisory"
    ],
    clarity: [
      "Where performance is leaking",
      "Which channels and campaigns should be scaled",
      "How marketing decisions affect pipeline and revenue"
    ]
  }
];

const roadmap = [
  {
    title: "Baseline Assessment",
    copy: "A focused review of your current systems, workflows, and operating constraints to establish a clear starting point."
  },
  {
    title: "Strategic Direction",
    copy: "A prioritised, outcome-led plan showing where to intervene first and why, aligned to your commercial goals."
  },
  {
    title: "Implementation",
    copy: "Design, build, and integration of agreed systems into your existing operations, with minimal disruption."
  },
  {
    title: "Go-Live and Optimisation",
    copy: "Systems are launched, monitored, and refined to ensure stability, performance, and early impact."
  },
  {
    title: "Ongoing Strategic Leadership",
    copy: "Continued oversight, optimisation, and guidance to maintain performance and support evolving targets."
  }
];

const expertise = [
  {
    title: "Lead Velocity",
    copy: "Faster first response, stronger qualification, and higher booking momentum."
  },
  {
    title: "Automation",
    copy: "Lower manual load through practical workflow and process automation."
  },
  {
    title: "Operational Clarity",
    copy: "Cleaner reporting, aligned KPIs, and sharper leadership decisions."
  }
];
---

<Layout title="Services" visioptPid={169}>
  <div class="bg-navy">
    <Container>
      <section class="py-16 md:py-24">
        <div class="max-w-6xl mx-auto px-4 text-center">
          <h1 class="services-hero-title text-yellow font-bold mb-8">
            Strategic AI Leadership and Systems Infrastructure
          </h1>
          <div class="mx-auto space-y-4 services-hero-subwrap">
            <p class="services-hero-sub text-white font-bold">
              HumTech builds and implements AI systems that improve lead velocity, automation, and operational clarity.
            </p>
            <p class="services-hero-sub text-yellow font-bold">
              Measurable ROI is the standard.
            </p>
          </div>
          <h2 class="section-title text-3xl lg:text-4xl xl:text-5xl font-bold text-white text-center mt-14 mb-12 leading-tight">
            Why This Works
          </h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {whyThisWorks.map((card) => (
              <article class="cred-card group">
                <div class="cred-card-inner">
                  <div class="mb-4">
                    <div class="w-10 h-10 rounded-lg bg-yellow/20 flex items-center justify-center">
                      <svg class="w-5 h-5 text-yellow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                        <polyline points="22 4 12 14.01 9 11.01"></polyline>
                      </svg>
                    </div>
                  </div>
                  <h3 class="text-yellow font-bold text-base md:text-lg mb-3">{card.title}</h3>
                  <p class="text-white/70 text-sm md:text-base leading-relaxed">{card.copy}</p>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>

      <section class="py-16 md:py-24 border-t border-white/10">
        <div class="max-w-6xl mx-auto px-4">
          <h2 class="section-title text-3xl lg:text-4xl xl:text-5xl font-bold text-white text-center mb-12 leading-tight">
            Custom Solutions
          </h2>
          <div class="solution-accordion-wrap max-w-4xl mx-auto space-y-4">
            {solutions.map((solution) => (
              <details class="solution-item">
                <summary class="solution-summary">
                  <div class="flex items-center gap-3">
                    <span class="w-9 h-9 rounded-full border border-yellow/60 bg-yellow/10 text-yellow font-bold flex items-center justify-center text-xs">
                      {solution.number}
                    </span>
                    <h3 class="text-yellow font-bold text-base md:text-lg">{solution.title}</h3>
                  </div>
                  <svg class="w-5 h-5 text-yellow solution-chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                    <path d="M6 9l6 6 6-6"></path>
                  </svg>
                </summary>
                <div class="solution-content">
                  <p class="text-white/80 text-sm md:text-base leading-relaxed mb-5">
                    <span class="font-semibold text-white">Objective:</span> {solution.objective}
                  </p>
                  <div class="space-y-3 text-white/70 text-sm md:text-base leading-relaxed">
                    <div>
                      <p class="text-white font-semibold mb-1">System Coverage</p>
                      <ul class="list-disc list-inside space-y-1">
                        {solution.coverage.map((item) => <li>{item}</li>)}
                      </ul>
                    </div>
                    <div>
                      <p class="text-white font-semibold mb-1">Delivery</p>
                      <ul class="list-disc list-inside space-y-1">
                        {solution.delivery.map((item) => <li>{item}</li>)}
                      </ul>
                    </div>
                    <div>
                      <p class="text-white font-semibold mb-1">What becomes clear</p>
                      <ul class="list-disc list-inside space-y-1">
                        {solution.clarity.map((item) => <li>{item}</li>)}
                      </ul>
                    </div>
                  </div>
                </div>
              </details>
            ))}
          </div>
        </div>
      </section>

      <section class="py-16 md:py-24 border-t border-white/10">
        <div class="max-w-6xl mx-auto px-4">
          <div class="text-center mb-16">
            <h2 class="section-title text-3xl lg:text-4xl xl:text-5xl font-bold text-yellow mb-4 leading-tight">Roadmap</h2>
          </div>

          <div class="grid md:grid-cols-2 gap-12">
            <div class="space-y-8">
              {roadmap.map((step, idx) => (
                <div class="flex gap-4">
                  <div class="flex flex-col items-center">
                    <div class="w-4 h-4 bg-yellow rounded-full"></div>
                    {idx < roadmap.length - 1 && <div class="w-0.5 h-full bg-white/20"></div>}
                  </div>
                  <div class={idx < roadmap.length - 1 ? "pb-8" : ""}>
                    <h3 class="text-lg font-bold text-yellow mb-2">{step.title}</h3>
                    <p class="text-white/70 text-base leading-relaxed">{step.copy}</p>
                  </div>
                </div>
              ))}
            </div>
            <article class="cred-card h-fit">
              <div class="cred-card-inner">
                <h3 class="text-white font-bold text-xl mb-4">Outcome Focus</h3>
                <p class="text-white/70 text-base leading-relaxed mb-4">
                  A clear path from baseline to live deployment.
                </p>
                <p class="text-white/70 text-base leading-relaxed">
                  The outcome is stronger lead response, better automation leverage, and clearer operational control.
                </p>
              </div>
            </article>
          </div>
        </div>
      </section>

      <section class="py-16 md:py-24 border-t border-white/10">
        <div class="max-w-6xl mx-auto px-4">
          <div class="text-center mb-14">
            <h2 class="section-title text-3xl lg:text-4xl xl:text-5xl font-bold text-yellow mb-4 leading-tight">Areas of Expertise</h2>
            <p class="text-white/70 text-lg max-w-3xl mx-auto">
              Strategic leadership and implementation support across the systems that directly affect growth and performance.
            </p>
          </div>
          <div class="grid md:grid-cols-3 gap-6">
            {expertise.map((item) => (
              <article class="cred-card">
                <div class="cred-card-inner">
                  <h3 class="text-yellow font-bold text-lg mb-3">{item.title}</h3>
                  <p class="text-white/70 text-base leading-relaxed">{item.copy}</p>
                </div>
              </article>
            ))}
          </div>

          <h2 class="section-title financial-title text-3xl lg:text-4xl xl:text-5xl font-bold text-yellow text-center mt-16 mb-12 leading-tight">
            The Financial Logic of the Fractional Model
          </h2>
          <div class="financial-logic-shell overflow-x-auto">
            <table class="financial-logic-table w-full border-collapse min-w-[760px]">
              <thead>
                <tr>
                  <th class="p-4 md:p-6 text-left border-b border-white/20"></th>
                  <th class="p-4 md:p-6 text-left text-white/60 font-normal text-sm md:text-base border-b border-white/20">Traditional Model</th>
                  <th class="p-4 md:p-6 text-left text-white font-bold text-sm md:text-base border-b border-white/20">
                    <span class="flex items-center gap-3">
                      Fractional Model
                      <svg class="w-7 h-7 text-yellow" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"></path>
                      </svg>
                    </span>
                  </th>
                </tr>
              </thead>
              <tbody>
                <tr class="financial-row" tabindex="0">
                  <td class="p-4 md:p-6 text-white font-bold text-sm md:text-base border-b border-white/10">Cost Efficiency</td>
                  <td class="p-4 md:p-6 text-white/60 text-sm md:text-base border-b border-white/10">Full-time in-house leadership hire and overhead</td>
                  <td class="p-4 md:p-6 text-white text-sm md:text-base border-b border-white/10 font-bold"><span class="text-yellow">70% less cost</span> than a comparable in-house setup</td>
                </tr>
                <tr class="financial-row" tabindex="0">
                  <td class="p-4 md:p-6 text-white font-bold text-sm md:text-base border-b border-white/10">Risk Mitigation</td>
                  <td class="p-4 md:p-6 text-white/60 text-sm md:text-base border-b border-white/10">Salary and fixed commitment</td>
                  <td class="p-4 md:p-6 text-white text-sm md:text-base border-b border-white/10 font-bold">Performance-Based Billing with Guaranteed ROI Commitments</td>
                </tr>
                <tr class="financial-row" tabindex="0">
                  <td class="p-4 md:p-6 text-white font-bold text-sm md:text-base">Value Add</td>
                  <td class="p-4 md:p-6 text-white/60 text-sm md:text-base">Single lane capability</td>
                  <td class="p-4 md:p-6 text-white text-sm md:text-base font-bold">On-Demand technical and strategic expertise included</td>
                </tr>
              </tbody>
            </table>
          </div>

          <div class="max-w-2xl mx-auto px-4 text-center mt-14 md:mt-16">
            <h2 class="text-3xl lg:text-4xl font-bold text-yellow mb-4">Ready to Move Faster?</h2>
            <p class="text-lg text-white/70 mb-8">
              Start your Free AI Diagnostic to identify the highest-leverage systems for your business.
            </p>
            <button
              onclick="openAssessmentModal()"
              class="px-8 py-4 rounded-md font-semibold bg-yellow text-navy hover:bg-yellow/90 transition-colors cursor-pointer text-lg">
              Start Free AI Diagnostic
            </button>
          </div>
        </div>
      </section>
    </Container>
  </div>
</Layout>

<style>
  .section-title {
    font-size: clamp(2.1rem, 3.2vw, 3.35rem);
    line-height: 1.16;
    max-width: 30ch;
    margin-inline: auto;
    letter-spacing: -0.01em;
  }

  .readable-prose p {
    font-size: clamp(1.05rem, 1.2vw, 1.42rem);
    line-height: 1.5;
    letter-spacing: 0.002em;
    max-width: 62ch;
    margin-inline: auto;
  }

  .cred-card {
    position: relative;
    padding: 3px;
    border-radius: 12px;
    background: linear-gradient(135deg, rgba(216, 183, 67, 0.6), rgba(216, 183, 67, 0.2));
  }

  .cred-card-inner {
    background: #0a1e35;
    border-radius: 10px;
    padding: 1.5rem;
    height: 100%;
    border: 1px solid rgba(216, 183, 67, 0.15);
  }

  .cred-card:hover .cred-card-inner {
    background: #0d2340;
  }

  .cred-card::before {
    content: '';
    position: absolute;
    inset: -1px;
    border-radius: 13px;
    border: 1px solid rgba(216, 183, 67, 0.3);
    pointer-events: none;
  }

  .solution-content ul {
    margin: 0;
    padding-left: 0;
    list-style: none;
  }

  .solution-content ul li {
    position: relative;
    padding-left: 1rem;
  }

  .solution-content ul li::before {
    content: "";
    position: absolute;
    top: 0.65rem;
    left: 0;
    width: 0.34rem;
    height: 0.34rem;
    border-radius: 999px;
    background: #d8b743;
    box-shadow: 0 0 8px rgba(216, 183, 67, 0.5);
  }

  .solution-item {
    border: 1px solid rgba(216, 183, 67, 0.3);
    border-radius: 12px;
    background: #0a1e35;
    overflow: hidden;
  }

  .solution-summary {
    list-style: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1rem 1.1rem;
    background: linear-gradient(180deg, rgba(13, 35, 64, 0.9) 0%, rgba(10, 30, 53, 0.9) 100%);
    border-bottom: 1px solid rgba(216, 183, 67, 0.15);
  }

  .solution-summary::-webkit-details-marker {
    display: none;
  }

  .solution-content {
    padding: 1rem 1.1rem 1.1rem;
  }

  .solution-chevron {
    transition: transform 0.2s ease;
  }

  .solution-item[open] .solution-chevron {
    transform: rotate(180deg);
  }

  .financial-logic-shell {
    border: 1px solid rgba(214, 181, 74, 0.35);
    border-radius: 1rem;
    background: linear-gradient(180deg, rgba(8, 38, 74, 0.92) 0%, rgba(5, 28, 56, 0.92) 100%);
    overflow-x: auto;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
  }

  .financial-logic-table th:nth-child(3),
  .financial-logic-table td:nth-child(3) {
    background: rgba(214, 181, 74, 0.08);
  }

  .financial-row {
    transition: background-color 0.2s ease;
  }

  .financial-row:hover,
  .financial-row:focus {
    background: rgba(255, 255, 255, 0.05);
    outline: none;
  }

  .intro-prose p {
    max-width: 46ch;
    font-size: clamp(1.16rem, 1.35vw, 1.55rem);
    line-height: 1.45;
  }

  .services-hero-title {
    font-size: clamp(2.15rem, 3.95vw, 4.2rem);
    line-height: 1.12;
    letter-spacing: -0.018em;
    max-width: 24ch;
    margin-inline: auto;
  }

  .services-hero-subwrap {
    max-width: 64ch;
  }

  .services-hero-sub {
    font-size: clamp(1.22rem, 1.55vw, 1.7rem);
    line-height: 1.38;
    letter-spacing: -0.004em;
  }

  .financial-title {
    max-width: none;
  }

  @media (min-width: 1024px) {
    .financial-title {
      white-space: nowrap;
      font-size: clamp(2.2rem, 3.05vw, 3.35rem);
    }
  }

</style>
