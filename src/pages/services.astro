---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";

const keyBenefits = [
  {
    title: "Zero Risk, Cancel Anytime",
    copy: "30-day rolling contract — no lock-ins. We hit your ROI targets and stay because results retain relationships, not contracts."
  },
  {
    title: "Senior-Only Access",
    copy: "Partner exclusively with experienced AI leaders. No junior teams, no service desks — enterprise-level strategy at SME pricing."
  },
  {
    title: "Hands-Off & Futureproof",
    copy: "Zero technical knowledge needed. We build, deploy, train, and maintain your systems while keeping you ahead as AI evolves."
  }
];

const roadmap = [
  {
    title: "Baseline Assessment",
    copy: "Review of current systems and constraints."
  },
  {
    title: "Strategic Direction",
    copy: "Prioritized plan aligned to your goals."
  },
  {
    title: "Implementation",
    copy: "Build and integrate with minimal disruption."
  },
  {
    title: "Go-Live & Optimization",
    copy: "Launch, monitor, and refine for impact."
  },
  {
    title: "Ongoing Leadership",
    copy: "Continued oversight and strategic guidance."
  }
];

const circleSteps = roadmap.map((step, i) => {
  const angleDeg = -90 + i * 72;
  const angleRad = angleDeg * Math.PI / 180;
  const r = 28;
  return {
    ...step,
    dotX: +(50 + r * Math.cos(angleRad)).toFixed(1),
    dotY: +(50 + r * Math.sin(angleRad)).toFixed(1),
    idx: i
  };
});

const expertise = [
  {
    title: "Lead Velocity",
    copy: "Faster first response, stronger qualification, and higher booking momentum.",
    icon: "lightning"
  },
  {
    title: "Automation",
    copy: "Lower manual load through practical workflow and process automation.",
    icon: "cog"
  },
  {
    title: "Operational Clarity",
    copy: "Cleaner reporting, aligned KPIs, and sharper leadership decisions.",
    icon: "chart"
  }
];

const deliveryFlow = [
  {
    title: "Diagnose",
    copy: "We identify the highest-value AI opportunities based on your commercial goals."
  },
  {
    title: "Deploy",
    copy: "We build and integrate custom branded systems into your existing operation."
  },
  {
    title: "Optimize",
    copy: "We monitor, improve, and guide strategy so ROI compounds over time."
  }
];
---

<Layout title="Services" visioptPid={169}>
  <div class="bg-navy">
    <Container>
      <section class="py-16 md:py-24 relative overflow-hidden">
        <!-- Floating background orbs -->
        <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
          <div class="absolute top-10 left-1/4 w-96 h-96 bg-blue/10 rounded-full blur-3xl animate-float"></div>
          <div class="absolute bottom-10 right-1/4 w-80 h-80 bg-yellow/10 rounded-full blur-3xl animate-float delay-200"></div>
          <div class="absolute top-1/2 left-10 w-64 h-64 bg-green/10 rounded-full blur-3xl animate-float delay-400"></div>
        </div>
        <!-- Gradient overlay -->
        <div class="absolute inset-0 bg-gradient-to-b from-navy via-transparent to-navy pointer-events-none" aria-hidden="true"></div>

        <div class="max-w-6xl mx-auto px-4 relative z-10">
          <div class="text-center">
            <h1 class="services-hero-title text-yellow font-bold mb-8 animate-fade-in-up">
              Fractional AI Growth Team and Systems Infrastructure That Scale With You
            </h1>
            <div class="mx-auto space-y-4 services-hero-subwrap">
              <p class="services-hero-sub text-white font-bold animate-fade-in-up delay-100">
                HumTech builds and implements AI systems that improve lead velocity, automation, and operational clarity.
              </p>
              <p class="services-hero-roi text-yellow font-bold animate-fade-in-up delay-200">
                Measurable ROI is the standard.
              </p>
            </div>
          </div>

          <!-- Delivery cards centered -->
          <div class="delivery-pipeline mt-14 max-w-6xl mx-auto">
            {deliveryFlow.map((step, idx) => (
              <>
                <article class="delivery-node card-hover">
                  <div class="delivery-badge">{idx + 1}</div>
                  <h3 class="text-yellow font-bold text-lg">{step.title}</h3>
                  <p class="text-white/70 text-sm leading-relaxed mt-2">{step.copy}</p>
                </article>
                {idx < deliveryFlow.length - 1 && (
                  <div class="delivery-arrow" aria-hidden="true">
                    <svg viewBox="0 0 40 24" fill="none" class="w-10 h-6">
                      <path d="M0 12h32m0 0l-8-8m8 8l-8 8" stroke="rgba(216,183,67,0.5)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </div>
                )}
              </>
            ))}
          </div>

          <!-- Quote -->
          <blockquote class="quote-accent mt-16 max-w-3xl mx-auto">
            <p class="text-white/85 text-lg md:text-xl leading-relaxed italic">
              "Companies that will succeed will be the ones that most effectively use Artificial Intelligence. If you are making maximum use of AI and are competing against someone who is not, you will win."
            </p>
            <cite class="block mt-4 text-yellow/70 text-sm font-bold not-italic tracking-wide">— Elon Musk</cite>
          </blockquote>

          <!-- Roadmap + Service Overview -->
          <div class="mt-20 grid lg:grid-cols-[1fr_1.1fr] gap-10 lg:gap-14 items-center">
            <div>
              <div class="roadmap-circle-container">
                <svg class="roadmap-ring-svg" viewBox="0 0 100 100" fill="none">
                  <circle cx="50" cy="50" r="28" stroke="rgba(216,183,67,0.15)" stroke-width="0.5" fill="none" />
                  <circle cx="50" cy="50" r="28" stroke="rgba(216,183,67,0.35)" stroke-width="1" stroke-dasharray="3 5" fill="none" class="roadmap-arc-path" />
                </svg>
                {circleSteps.map((step) => (
                  <div class={`rc-node rc-pos-${step.idx}`} style={`left:${step.dotX}%;top:${step.dotY}%`}>
                    <div class="rc-dot roadmap-dot-pulse"></div>
                    <div class="rc-content">
                      <span class="rc-step-num">Step {step.idx + 1}</span>
                      <h3 class="rc-title">{step.title}</h3>
                      <p class="rc-desc">{step.copy}</p>
                    </div>
                  </div>
                ))}
              </div>

              <div class="roadmap-mobile">
                {roadmap.map((step, idx) => (
                  <div class="flex gap-4">
                    <div class="flex flex-col items-center">
                      <div class="w-3.5 h-3.5 bg-yellow rounded-full shrink-0" style="box-shadow:0 0 10px rgba(216,183,67,0.4)"></div>
                      {idx < roadmap.length - 1 && <div class="w-0.5 flex-1 bg-white/15"></div>}
                    </div>
                    <div class={idx < roadmap.length - 1 ? "pb-6" : ""}>
                      <span class="text-yellow/50 font-bold text-xs tracking-widest uppercase">Step {idx + 1}</span>
                      <h3 class="text-base font-bold text-yellow mt-1">{step.title}</h3>
                      <p class="text-white/60 text-sm leading-relaxed mt-1">{step.copy}</p>
                    </div>
                  </div>
                ))}
              </div>
            </div>

            <div>
              <h2 class="text-2xl lg:text-3xl font-bold text-yellow leading-tight mb-4">Service Overview</h2>
              <p class="text-white/75 text-base md:text-lg leading-relaxed">
                HumTech transforms SMEs into AI-powered leaders through fractional AI expertise, custom systems, and measurable ROI delivery.
              </p>
              <p class="text-white/75 text-base md:text-lg leading-relaxed mt-4">
                We provide executive-level support across strategy, implementation, and optimization without enterprise overheads.
              </p>
            </div>
          </div>

          <!-- Who is this ideal for? -->
          <div class="ideal-for mt-16">
            <h2 class="text-2xl lg:text-3xl font-bold text-white leading-tight mb-8 text-center">
              Who is this ideal for?
            </h2>
            <div class="grid sm:grid-cols-2 gap-4">
              <div class="ideal-card card-hover">
                <div class="ideal-icon ideal-icon--yellow">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                  </svg>
                </div>
                <p class="text-white/80 text-base leading-relaxed">UK businesses with 10 to 200 employees looking to use AI without the big project headaches</p>
              </div>
              <div class="ideal-card card-hover">
                <div class="ideal-icon ideal-icon--blue">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path>
                  </svg>
                </div>
                <p class="text-white/80 text-base leading-relaxed">Companies with legacy systems, messy data, and small teams who need practical solutions</p>
              </div>
              <div class="ideal-card card-hover">
                <div class="ideal-icon ideal-icon--green">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                  </svg>
                </div>
                <p class="text-white/80 text-base leading-relaxed">Business owners who've tried AI tools but couldn't make them work across the business</p>
              </div>
              <div class="ideal-card card-hover">
                <div class="ideal-icon ideal-icon--yellow">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                  </svg>
                </div>
                <p class="text-white/80 text-base leading-relaxed">Teams that can't justify a full-time AI hire but know they're falling behind</p>
              </div>
            </div>
          </div>

          <div class="mt-14 border border-white/10 rounded-xl p-6 md:p-8 bg-white/[0.02]">
            <h2 class="text-2xl lg:text-3xl font-bold text-yellow leading-tight">Fractional AI Growth Team</h2>
            <p class="text-white/70 mt-3 text-lg">Why Fractioned AI?</p>
            <p class="text-white/70 mt-4 max-w-4xl">
              Unlike most AI providers who deploy generic, one-size-fits-all tools with near-zero aftercare, HumTech delivers tailored consultations, fully branded custom systems, and rigorous ongoing guidance for sustained ROI.
            </p>

            <div class="mt-8 grid md:grid-cols-3 gap-4" aria-label="Why Fractioned AI key benefits">
              {keyBenefits.map((item, idx) => (
                <article class={`benefit-tile card-hover delay-${(idx + 1) * 100}`}>
                  <div class="benefit-num" aria-hidden="true">{idx + 1}</div>
                  <h3 class="text-yellow font-bold text-lg">{item.title}</h3>
                  <p class="text-white/70 text-base leading-relaxed mt-3">{item.copy}</p>
                </article>
              ))}
            </div>
          </div>
        </div>
      </section>

      <div class="section-divider" aria-hidden="true"><div class="section-divider-line"></div></div>

      <section class="py-16 md:py-24">
        <div class="max-w-6xl mx-auto px-4">
          <h2 class="section-title financial-title text-3xl lg:text-4xl xl:text-5xl font-bold text-yellow text-center mb-12 leading-tight">
            The Financial Logic of the Fractional Model
          </h2>
          <div class="financial-logic-shell overflow-x-auto">
            <table class="financial-logic-table w-full border-collapse min-w-[760px]">
              <thead>
                <tr>
                  <th class="p-4 md:p-6 text-left border-b border-white/20"></th>
                  <th class="p-4 md:p-6 text-left text-white/60 font-normal text-sm md:text-base border-b border-white/20">Traditional Model</th>
                  <th class="p-4 md:p-6 text-left text-white font-bold text-sm md:text-base border-b border-white/20">
                    <span class="flex items-center gap-3">
                      Fractional Model
                      <svg class="w-7 h-7 text-yellow" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"></path>
                      </svg>
                    </span>
                  </th>
                </tr>
              </thead>
              <tbody>
                <tr class="financial-row" tabindex="0">
                  <td class="p-4 md:p-6 text-white font-bold text-sm md:text-base border-b border-white/10">Cost Efficiency</td>
                  <td class="p-4 md:p-6 text-white/60 text-sm md:text-base border-b border-white/10">Full-time in-house leadership hire and overhead</td>
                  <td class="p-4 md:p-6 text-white text-sm md:text-base border-b border-white/10 font-bold"><span class="text-yellow">70% less cost</span> than a comparable in-house setup</td>
                </tr>
                <tr class="financial-row" tabindex="0">
                  <td class="p-4 md:p-6 text-white font-bold text-sm md:text-base border-b border-white/10">Risk Mitigation</td>
                  <td class="p-4 md:p-6 text-white/60 text-sm md:text-base border-b border-white/10">Salary and fixed commitment</td>
                  <td class="p-4 md:p-6 text-white text-sm md:text-base border-b border-white/10 font-bold">Performance-Based Billing with Guaranteed ROI Commitments</td>
                </tr>
                <tr class="financial-row" tabindex="0">
                  <td class="p-4 md:p-6 text-white font-bold text-sm md:text-base">Value Add</td>
                  <td class="p-4 md:p-6 text-white/60 text-sm md:text-base">Single lane capability</td>
                  <td class="p-4 md:p-6 text-white text-sm md:text-base font-bold">On-Demand technical and strategic expertise included</td>
                </tr>
              </tbody>
            </table>
          </div>

          <div class="section-divider mt-12" aria-hidden="true"><div class="section-divider-line"></div></div>

          <div class="text-center mb-14">
            <h2 class="section-title text-3xl lg:text-4xl xl:text-5xl font-bold text-yellow mt-16 mb-4 leading-tight">Areas of Expertise</h2>
            <p class="text-white/70 text-lg max-w-3xl mx-auto">
              Strategic leadership and implementation support across the systems that directly affect growth and performance.
            </p>
          </div>
          <div class="grid md:grid-cols-3 gap-6">
            {expertise.map((item) => (
              <article class="cred-card card-hover">
                <div class="cred-card-inner">
                  <div class="expertise-icon-wrap mb-4">
                    {item.icon === "lightning" && (
                      <svg class="w-8 h-8 text-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                      </svg>
                    )}
                    {item.icon === "cog" && (
                      <svg class="w-8 h-8 text-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.573-1.066z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                    )}
                    {item.icon === "chart" && (
                      <svg class="w-8 h-8 text-green" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                      </svg>
                    )}
                  </div>
                  <h3 class="text-yellow font-bold text-lg mb-3">{item.title}</h3>
                  <p class="text-white/70 text-base leading-relaxed">{item.copy}</p>
                </div>
              </article>
            ))}
          </div>

          <div class="section-divider mt-10" aria-hidden="true"><div class="section-divider-line"></div></div>

          <div class="max-w-2xl mx-auto px-4 text-center mt-14 md:mt-16 relative">
            <div class="absolute inset-0 cta-radial-bg pointer-events-none" aria-hidden="true"></div>
            <div class="relative z-10">
              <h2 class="text-3xl lg:text-4xl font-bold text-yellow mb-4">Ready to Diagnose Your Business?</h2>
              <p class="text-lg text-white/70 mb-8">
                Start your Free AI Diagnostic to identify your highest-leverage AI opportunities.
              </p>
              <button
                onclick="openAssessmentModal()"
                class="px-8 py-4 rounded-md font-semibold bg-yellow text-navy hover:bg-yellow/90 transition-colors cursor-pointer text-lg animate-pulse-glow">
                Diagnose My Business
              </button>
            </div>
          </div>
        </div>
      </section>
    </Container>
  </div>
</Layout>

<style>
  .section-title {
    font-size: clamp(2.1rem, 3.2vw, 3.35rem);
    line-height: 1.16;
    max-width: none;
    margin-inline: auto;
    letter-spacing: -0.01em;
  }

  /* Expertise cards */
  .cred-card {
    position: relative;
    padding: 3px;
    border-radius: 12px;
    background: linear-gradient(135deg, rgba(216, 183, 67, 0.6), rgba(216, 183, 67, 0.2));
  }

  .cred-card-inner {
    background: #0a1e35;
    border-radius: 10px;
    padding: 1.5rem;
    height: 100%;
    border: 1px solid rgba(216, 183, 67, 0.15);
  }

  .cred-card:hover .cred-card-inner {
    background: #0d2340;
  }

  .cred-card::before {
    content: "";
    position: absolute;
    inset: -1px;
    border-radius: 13px;
    border: 1px solid rgba(216, 183, 67, 0.3);
    pointer-events: none;
  }

  .expertise-icon-wrap {
    width: 3rem;
    height: 3rem;
    border-radius: 0.5rem;
    background: rgba(216, 183, 67, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Roadmap circle */
  .roadmap-circle-container {
    position: relative;
    max-width: 360px;
    margin: 0 auto;
    aspect-ratio: 1;
  }

  .roadmap-ring-svg {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 52%;
    height: 52%;
    transform: translate(-50%, -50%);
    overflow: visible;
  }

  .rc-node {
    position: absolute;
    width: 0;
    height: 0;
  }

  .rc-dot {
    position: absolute;
    width: 11px;
    height: 11px;
    background: #d8b743;
    border-radius: 50%;
    transform: translate(-50%, -50%);
    box-shadow: 0 0 10px rgba(216, 183, 67, 0.4);
    z-index: 2;
  }

  @keyframes dot-pulse {
    0%, 100% {
      box-shadow: 0 0 8px rgba(216, 183, 67, 0.4);
      transform: translate(-50%, -50%) scale(1);
    }
    50% {
      box-shadow: 0 0 16px rgba(216, 183, 67, 0.7);
      transform: translate(-50%, -50%) scale(1.2);
    }
  }

  .roadmap-dot-pulse {
    animation: dot-pulse 2.5s ease-in-out infinite;
  }

  .rc-pos-0 .roadmap-dot-pulse { animation-delay: 0s; }
  .rc-pos-1 .roadmap-dot-pulse { animation-delay: 0.5s; }
  .rc-pos-2 .roadmap-dot-pulse { animation-delay: 1.0s; }
  .rc-pos-3 .roadmap-dot-pulse { animation-delay: 1.5s; }
  .rc-pos-4 .roadmap-dot-pulse { animation-delay: 2.0s; }

  @keyframes dash-rotate {
    to { stroke-dashoffset: -50; }
  }

  .roadmap-arc-path {
    animation: dash-rotate 12s linear infinite;
  }

  .rc-content {
    position: absolute;
    width: 136px;
  }

  .rc-step-num {
    display: block;
    font-size: 0.6rem;
    font-weight: 700;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(216, 183, 67, 0.5);
  }

  .rc-title {
    font-size: 0.8rem;
    font-weight: 700;
    color: #d8b743;
    margin-top: 0.1rem;
    line-height: 1.2;
  }

  .rc-desc {
    font-size: 0.64rem;
    color: rgba(255, 255, 255, 0.45);
    line-height: 1.35;
    margin-top: 0.2rem;
  }

  .rc-pos-0 .rc-content {
    bottom: 16px;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
  }

  .rc-pos-1 .rc-content {
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    text-align: left;
  }

  .rc-pos-2 .rc-content {
    left: 16px;
    top: 50%;
    transform: translateY(-30%);
    text-align: left;
  }

  .rc-pos-3 .rc-content {
    right: 16px;
    top: 50%;
    transform: translateY(-30%);
    text-align: right;
  }

  .rc-pos-4 .rc-content {
    right: 16px;
    top: 50%;
    transform: translateY(-50%);
    text-align: right;
  }

  .roadmap-mobile {
    display: none;
  }

  /* Delivery pipeline */
  .delivery-pipeline {
    display: flex;
    align-items: stretch;
  }

  .delivery-node {
    flex: 1;
    border: 1px solid rgba(216, 183, 67, 0.25);
    border-radius: 0.75rem;
    background: rgba(8, 30, 56, 0.7);
    padding: 1.25rem;
    position: relative;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .delivery-node:hover {
    border-color: rgba(216, 183, 67, 0.6);
    box-shadow: 0 0 25px rgba(216, 183, 67, 0.15);
  }

  .delivery-arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    width: 3rem;
  }

  .delivery-badge {
    width: 2rem;
