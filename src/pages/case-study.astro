<script is:inline>
  (function () {
    var revealObserver = new IntersectionObserver(function (entries) {
      entries.forEach(function (entry) {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          revealObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.08 });
    document.querySelectorAll('.reveal').forEach(function (el) {
      revealObserver.observe(el);
    });
  })();
</script>

<script is:inline>
  (function () {
    var STAGGER_MS = 420;
    var triggered = false;

    function animateBars() {
      // Progress fills
      document.querySelectorAll('.cs-progress-fill').forEach(function (el) {
        var target = el.getAttribute('data-target-width') || '0';
        el.style.width = target + '%';
      });
      // Bar chart bars — stagger each bar slightly for a cascade effect
      document.querySelectorAll('.cs-bar').forEach(function (el, i) {
        var target = el.getAttribute('data-target-height') || '0';
        setTimeout(function () {
          el.style.height = target + '%';
        }, i * 60);
      });
    }

    function runSequence() {
      if (triggered) return;
      triggered = true;
      var cards = document.querySelectorAll('#cs-narrative [data-cs-card]');
      cards.forEach(function (card) {
        var index = parseInt(card.getAttribute('data-cs-card'), 10);
        setTimeout(function () {
          card.classList.add('cs-visible');
          // Trigger chart/bar animations after dashboard (card 1) appears
          if (index === 1) {
            setTimeout(animateBars, 200);
          }
        }, index * STAGGER_MS);
      });
    }

    var wrap = document.getElementById('cs-narrative');
    if (!wrap) return;

    var narrativeObserver = new IntersectionObserver(function (entries) {
      entries.forEach(function (entry) {
        if (entry.isIntersecting) {
          runSequence();
          narrativeObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.15 });

    narrativeObserver.observe(wrap);
  })();
</script>

<style>
  /* ── Tech scan lines ── */
  .cs-scanline {
    position: absolute;
    left: 0;
    right: 0;
    height: 1px;
    pointer-events: none;
    background: linear-gradient(90deg, transparent 0%, rgba(61,178,221,0.25) 20%, rgba(61,178,221,0.4) 50%, rgba(61,178,221,0.25) 80%, transparent 100%);
    opacity: 0;
    z-index: 0;
  }
  .cs-scanline-1 {
    animation: csScan 10s linear infinite;
  }
  .cs-scanline-2 {
    animation: csScan 14s linear 5s infinite;
  }
  @keyframes csScan {
    0%   { top: -2px; opacity: 0; }
    5%   { opacity: 0.6; }
    95%  { opacity: 0.6; }
    100% { top: 100%; opacity: 0; }
  }

  /* ── Pulsing circuit nodes ── */
  .cs-node {
    position: absolute;
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: rgba(61,178,221,0.6);
    box-shadow: 0 0 8px rgba(61,178,221,0.4), 0 0 24px rgba(61,178,221,0.15);
    pointer-events: none;
    animation: csNodePulse 3s ease-in-out infinite;
    z-index: 0;
  }
  @keyframes csNodePulse {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50%      { opacity: 0.8; transform: scale(1.8); }
  }

  /* ── Narrative card system ── */

  /* Shared card base */
  .cs-card {
    background: rgba(255,255,255,0.035);
    border: 1px solid rgba(255,255,255,0.08);
    border-radius: 14px;
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 32px rgba(0,0,0,0.35);
    /* Stagger-in start state */
    opacity: 0;
    transform: translateY(24px);
    transition: opacity 0.55s cubic-bezier(0.22,1,0.36,1), transform 0.55s cubic-bezier(0.22,1,0.36,1);
  }
  .cs-card.cs-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Outer wrapper: relative container, defined height on desktop */
  .cs-visual-wrap {
    position: relative;
    min-height: 480px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* ── Desktop: absolute layered layout ── */
  @media (min-width: 1024px) {
